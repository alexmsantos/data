r as histórias que ficam à margem e acredito que temos sempre algo a aprender quando encaramos o desafio de traduzir no preto e branco dos caracteres as infinitas tonalidades que nos rodeiam.","email":"aline.flor@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"aline-flor","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Aline Flor z.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1530339?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#114;&#111;&#108;&#102;&#46;&#101;&#110;&#105;&#108;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/12/05/azul/noticia/cop-abriu-dialogo-industrias-fosseis-vieram-massa-2072559","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"COP28","url":"https://www.publico.pt/2023/12/05/azul/noticia/cop-abriu-dialogo-industrias-fosseis-vieram-massa-2072559"},"id":2072559,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":13,"title":"Ajudar nas horas difíceis sem pedir nada em troca","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1864509?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2023/12/05/estudiop/noticia/ajudar-horas-dificeis-pedir-nada-troca-2068631","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":{"id":0,"name":"BPI La Caixa","ImageUrl":"https://imagens.publico.pt/imagens.aspx/1779903?tp=UH&db=IMAGENS","slug":null,"url":null},"rubric":{"name":"Conteúdo comercial","url":"https://www.publico.pt/2023/12/05/estudiop/noticia/ajudar-horas-dificeis-pedir-nada-troca-2068631"},"id":2068631,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":14,"title":"Lisboa vai ter conten