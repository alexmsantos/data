anente. Desde 1999, já experimentei um pouco de tudo, do noticiário local ao desporto, fiz reportagem por todo o país, na Europa, em África, nos Estados Unidos. Tenho um MBA pela Porto Business School, com especialização em Comportamento Organizacional.","email":"voferreira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"victor-ferreira","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Vitor Ferreira.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/2001908?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#114;&#114;&#101;&#102;&#111;&#118;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/06/30/economia/noticia/portugal-melhor-bastam-dez-anos-2138395","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Empresas","url":"https://www.publico.pt/2025/06/30/economia/noticia/portugal-melhor-bastam-dez-anos-2138395"},"id":2138395,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":5,"title":"Lisboa e Amadora ultrapassam concentração de ozono que pode causar problemas de saúde","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2011733?tp=UH&db=IMAGENS&type=JPG","author":[{"id":16676,"nome":"Azul","descricao":"","email":"azul@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"azul","imagem":null,"hasImage":false,"isExternal":true,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#108;&#117;&#122;&#97;","contribuicao":"","tipo":"EXTERNO"},{"id":90,"nome":"Lusa","descricao":"","email":"","facebook":null,"googlePlus":null,