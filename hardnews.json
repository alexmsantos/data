mos sempre algo a aprender quando encaramos o desafio de traduzir no preto e branco dos caracteres as infinitas tonalidades que nos rodeiam.","email":"aline.flor@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"aline-flor","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Aline Flor z.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1530339?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#114;&#111;&#108;&#102;&#46;&#101;&#110;&#105;&#108;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/12/10/azul/noticia/paises-europeus-tentam-fugir-responsabilidades-climaticas-portugal-fala-tribunal-internacional-tercafeira-2115006","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Justiça climática","url":"https://www.publico.pt/2024/12/10/azul/noticia/paises-europeus-tentam-fugir-responsabilidades-climaticas-portugal-fala-tribunal-internacional-tercafeira-2115006"},"id":2115006,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":27,"title":"Natal à mesa: o sabor e tradição pelo<em> chef </em>Bertílio Gomes","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1960103?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2024/12/04/estudiop/noticia/natal-mesa-sabor-tradicao-chef-bertilio-gomes-2114240","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":{"id":0,"name":"Albricoque","ImageUrl":"https://imagens.publico.pt/imagens.aspx/1960843?tp=UH&db=IMAGENS","slug":"albricoque","url":"https://tabernaalbricoque.eatbu.com/?lang=pt"},"rubric":{"name":"Conteúdo comercial","url":"https://www.publico.pt/2024/12/04/estudiop/noticia/natal-mesa-sabor-trad