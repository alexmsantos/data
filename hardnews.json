ha companheira e, através dela, tento mostrar lugares e realidades que, fazendo parte do nosso dia-a-dia, são invisíveis ao cidadão comum.","email":"teresa.miranda@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista multimédia","profissaoNaAltura":"","slug":"teresa-pacheco-miranda","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#100;&#110;&#97;&#114;&#105;&#109;&#46;&#97;&#115;&#101;&#114;&#101;&#116;","contribuicao":"Fotografia","tipo":"INTERNO"}],"shares":0,"url":"/2023/07/26/culturaipsilon/reportagem/stop-nao-inventou-musica-permitiu-inventasse-musica-2058146","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Reportagem","url":"/musica"},"id":2058146,"type":"NOTICIA","isMultipleRubric":true,"tag":{"id":708,"nome":"Música","slug":"musica","tagEn":"","isPrincipal":false,"isVisible":true,"urlRoute":"/tmusica","isPrincipalParaArtigo":true,"isTimeLine":false,"forcaConteudoAberto":false,"follow_type":null,"descricao":null,"imagem":null,"html":null,"isForForuns":true,"isUsedInForuns":false},"size":30},{"pos":29,"title":"Paulo Raimundo: “Vivo bem sem elogios”","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1828927?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2023/07/27/impar/depoimento/paulo-raimundo-vivo-bem-elogios-2056861","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":{"name":"impar"},"brand":null,"rubric":{"name":"Depoimento","url":"/p2-verao-2023"},"id":2056861,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30}]
