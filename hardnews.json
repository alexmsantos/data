ras e tive a imensa sorte de ver revoluções. Nunca mais parei de fazer do outro mundo o meu. E até aprendi a escrever Saddam em árabe.","email":"slorena@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"sofia-lorena","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"sofia-lorena-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739860?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#110;&#101;&#114;&#111;&#108;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":13,"url":"/2023/12/01/mundo/noticia/comandante-guarda-nacional-guinebissau-detido-disparos-armas-guerra-2072225","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Guiné-Bissau","url":"https://www.publico.pt/2023/12/01/mundo/noticia/comandante-guarda-nacional-guinebissau-detido-disparos-armas-guerra-2072225"},"id":2072225,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":21,"title":"Um serviço de rent-a-car moderno com um nome histórico. Sabe qual é?","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1863156?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2023/11/29/estudiop/noticia/servico-rentacar-moderno-nome-historico-sabe-2071695","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":{"id":0,"name":"SIXT","ImageUrl":"https://imagens.publico.pt/imagens.aspx/1863054?tp=UH&db=IMAGENS","slug":null,"url":null},"rubric":{"name":"Conteúdo comercial","url":"https://www.publico.pt/2023/11/29/estudiop/noticia/servico-rentacar-moderno-nome-historico-sabe-2071695"},"id":2071695,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":22,"title":"FEP: Sete dé