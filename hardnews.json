junta do PÚBLICO. Com a remodelação da direcção editorial do PÚBLICO, passei a redactora principal em Setembro deste ano.","email":"ana.sa.lopes@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Redactora-principal","profissaoNaAltura":"Redactora-principal","slug":"ana-sa-lopes","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"ana-sa-lopes-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739858?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":"Ana Sousa Dias","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#112;&#111;&#108;&#46;&#97;&#115;&#46;&#97;&#110;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/08/13/politica/noticia/pinto-leite-arlindo-cunha-mendes-silva-comissao-politica-marques-mendes-2143802","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Presidenciais 2026","url":"https://www.publico.pt/2025/08/13/politica/noticia/pinto-leite-arlindo-cunha-mendes-silva-comissao-politica-marques-mendes-2143802"},"id":2143802,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":25,"title":"Actualização da avaliação fiscal em 2024 dita aumento de 9,75% no IMI","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2022493?tp=UH&db=IMAGENS&type=JPG","author":[{"id":459,"nome":"Rosa Soares","descricao":"","email":"rsoares@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"rosa-soares","imagem":{"w":null,"h":null,"largura":472,"altura":472,"nome":"rosa soares.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1390182?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"transla