 ser jornalista.","email":"acordeiro@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"ana-dias-cordeiro","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#114;&#105;&#101;&#100;&#114;&#111;&#99;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/22/sociedade/noticia/centros-educativos-fecharam-vagas-nao-terem-profissionais-reinsercao-social-2108834","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Justiça","url":"https://www.publico.pt/2024/10/22/sociedade/noticia/centros-educativos-fecharam-vagas-nao-terem-profissionais-reinsercao-social-2108834"},"id":2108834,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":16,"title":"Neemias Queta pertence à NBA e os campeões querem que continue a prová-lo","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1948567?tp=UH&db=IMAGENS&type=JPG","author":[{"id":12037,"nome":"José Volta e Pinto","descricao":"","email":"jose.volta.pinto@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"jose-volta-pinto","imagem":{"w":null,"h":null,"largura":500,"altura":500,"nome":"josevoltapinto.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1434636?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#116;&#110;&#105;&#112;&#46;&#97;&#116;&#108;&#111;&#118;&#46;&#101;&#115;&#111;&#106;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/22/desporto/noticia/neemias-queta-pertence-nba-campeoes-querem-continue-provalo-2108845","co