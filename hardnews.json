s em 1998. Passei ainda pela Sociedade, como jornalista e como editora, até que, em 2008, assumi a edição da Fugas, onde fiquei até Dezembro de 2024. Em Janeiro de 2025, integrei a equipa do Local Porto.","email":"scosta@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"sandra-silva-costa","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"sc.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1091354?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#116;&#115;&#111;&#99;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/04/29/sociedade/noticia/faltou-voz-comando-proteccao-civil-comunicacao-apagao-2131344","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Apagão","url":"https://www.publico.pt/2025/04/29/sociedade/noticia/faltou-voz-comando-proteccao-civil-comunicacao-apagao-2131344"},"id":2131344,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":6,"title":"SIRESP voltou a falhar num momento crítico: “Esta solução parece que não serve”","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1995946?tp=UH&db=IMAGENS&type=JPG","author":[{"id":11423,"nome":"Daniela Carmo","descricao":"","email":"daniela.carmo@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"daniela-carmo","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#109;&#114;&#97;&#99;&#46;&#97;&#108;&#101;&#105;&#110;&#97;&#100;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/04/29/sociedade/noticia/sires