enhei funções de editora do P2, editora da Sociedade, editora-executiva e directora-adjunta.","email":"asanches@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Redactora principal","profissaoNaAltura":"","slug":"andreia-sanches","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"andreia-sanches-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1748990?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":"Andreia C. Faria","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#104;&#99;&#110;&#97;&#115;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/07/21/sociedade/noticia/preciso-candidatar-ensino-superior-despesas-contar-2140084","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Acesso ao Ensino Superior 2025","url":"https://www.publico.pt/2025/07/21/sociedade/noticia/preciso-candidatar-ensino-superior-despesas-contar-2140084"},"id":2140084,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":13,"title":"Já são nove os detidos por tráfico de drogas no Boom Festival","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2017138?tp=UH&db=IMAGENS&type=JPG","author":[{"id":17560,"nome":"Leonor Alhinho","descricao":"","email":"leonor.alhinho@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"leonor-alhinho","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#104;&#110;&#105;&#104;&#108;&#97;&#46;&#114;&#111;&#110;&#111;&#101;&#108;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/07/21/sociedade/noticia/ja-sao-nove-detidos-trafico-drogas-boom-fes