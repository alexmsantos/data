m o Prémio de Jornalismo Luso-Alemão 2022.","email":"maria.joao.guimaraes@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"maria-joao-guimaraes","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Maria_J_Guimaraes.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737866?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#97;&#114;&#97;&#109;&#105;&#117;&#103;&#46;&#111;&#97;&#111;&#106;&#46;&#97;&#105;&#114;&#97;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/08/26/politica/noticia/populismo-direita-radical-extremadireita-sao-onde-chega-2061209","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Extrema-direita","url":"https://www.publico.pt/2023/08/26/politica/noticia/populismo-direita-radical-extremadireita-sao-onde-chega-2061209"},"id":2061209,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":23,"title":"Três fuzileiros dos EUA morreram após queda de helicóptero militar na Austrália","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1837136?tp=UH&db=IMAGENS&type=JPG","author":[{"id":890,"nome":"Reuters","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"reuters","imagem":null,"hasImage":false,"isExternal":true,"encodedEmail":"","contribuicao":"","tipo":"AGENCIAS"}],"shares":0,"url":"/2023/08/27/mundo/noticia/tres-fuzileiros-eua-morreram-apos-queda-helicoptero-militar-exercicios-australia-2061363","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Acidentes","url":"https://www.pub