ítica.","email":"sao.jose.almeida@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Redactora principal","profissaoNaAltura":"","slug":"sao-jose-almeida","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"sao-jose-almeida-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739852?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#100;&#105;&#101;&#109;&#108;&#97;&#46;&#101;&#115;&#111;&#106;&#46;&#111;&#97;&#115;","contribuicao":"texto","tipo":"INTERNO"},{"id":3976,"nome":"Nuno Ferreira Santos","descricao":"","email":"nuno.santos@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Fotojornalista","profissaoNaAltura":"","slug":"nuno-ferreira-santos","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#111;&#116;&#110;&#97;&#115;&#46;&#111;&#110;&#117;&#110;","contribuicao":"fotografia","tipo":"INTERNO"}],"shares":0,"url":"/2024/04/14/politica/entrevista/manuel-alegre-nao-temperamento-poder-contrapoder-2086561","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Entrevista","url":"/ps"},"id":2086561,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":8,"title":"Ensino superior vai ter mais vagas em Lisboa e menos no interior","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1900067?tp=UH&db=IMAGENS&type=JPG","author":[{"id":3120,"nome":"Samuel Silva","descricao":"","email":"samuel.silva@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"samuel-sil