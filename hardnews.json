 cientifica Information em Julho de 2020.","email":"acorreia@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Redactor principal","profissaoNaAltura":"","slug":"amilcar-correia","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Amilcar_Correia-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739387?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#105;&#101;&#114;&#114;&#111;&#99;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/08/04/mundo/entrevista/gilles-kepel-netanyahu-fingiu-negociar-biden-poderoso-2099732","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Entrevista","url":"/medio-oriente"},"id":2099732,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":19,"title":"“Adoro o meu emprego de negra”: Simone Biles junta-se ao coro de críticas a Trump","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1929173?tp=UH&db=IMAGENS&type=JPG","author":[{"id":6522,"nome":"Rick Noack","descricao":"Jornalista The Washington Post","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista The Washington Post","profissaoNaAltura":"","slug":"rick-noack","imagem":null,"hasImage":false,"isExternal":true,"encodedEmail":"","contribuicao":"","tipo":"PROJECT_SYNDICATE"}],"shares":0,"url":"/2024/08/03/impar/noticia/adoro-emprego-negra-simone-biles-juntase-coro-criticas-trump-2099765","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":{"name":"impar"},"brand":null,"rubric":{"name":"Ginástica","url":"https://www.publico.pt/2024/08/03/impar/noticia/adoro-emprego-negra-simone-biles-juntase-coro-criticas-trump-2099765"},"id":2099