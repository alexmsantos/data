e economia. Nasci e estudei em Coimbra, onde experimentei o jornalismo universitário (jornal A Cabra, revista Via Latina e RUC), e passei pelo Centro Regional de Informação das Nações Unidas, em Bruxelas.","email":"pedro.crisostomo@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"pedro-crisostomo","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Pedro Crisostomo.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1530342?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#109;&#111;&#116;&#115;&#111;&#115;&#105;&#114;&#99;&#46;&#111;&#114;&#100;&#101;&#112;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/08/21/economia/noticia/bonus-pensoes-sera-alvo-retencao-irs-autonoma-evitar-agravamento-fiscal-2101475","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Economia","url":"/economia"},"id":2101475,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":7,"title":"Responsável de serviço de Ginecologia da Maternidade Alfredo da Costa demite-se","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1932926?tp=UH&db=IMAGENS&type=JPG","author":[{"id":20,"nome":"Alexandra Campos","descricao":"","email":"acampos@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"alexandra-campos","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#111;&#112;&#109;&#97;&#99;&#97;","contribuicao":"","tipo":"INTERNO"},{"id":963,"nome":"Ana Henriques","descricao":"","email":"abhenriques@publico.pt","fa