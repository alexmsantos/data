itter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"miguel-dantas","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#97;&#116;&#110;&#97;&#100;&#46;&#108;&#101;&#117;&#103;&#105;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":46,"url":"/2023/10/12/mundo/noticia/cruz-vermelha-contacto-hamas-libertacao-refens-2066464","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Israel","url":"https://www.publico.pt/2023/10/12/mundo/noticia/cruz-vermelha-contacto-hamas-libertacao-refens-2066464"},"id":2066464,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":5,"title":"NATO pede proporcionalidade a Israel na sua luta para destruir o Hamas","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1849939?tp=UH&db=IMAGENS&type=JPG","author":[{"id":10,"nome":"Rita Siza","descricao":"","email":"rita.siza@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":", Bruxelas","profissaoActual":"correspondente em Bruxelas","profissaoNaAltura":"correspondente em Bruxelas","slug":"rita-siza","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Rita_Siza.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737896?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#122;&#105;&#115;&#46;&#97;&#116;&#105;&#114;","contribuicao":"","tipo":"INTERNO"}],"shares":18,"url":"/2023/10/12/mundo/noticia/nato-pede-proporcionalidade-israel-luta-destruir-hamas-2066537","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Médio Oriente","url":"https://www.publico.pt/2023/10/12/mundo/noticia/nato-pede-proporcionalidade-israel-luta-destruir-hamas-2066537"},"id":2066537,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":6,"title":"Para os países árabes, a segurança voltou a ser a prioridade absoluta\r\n\r\n","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1850062?tp=UH&db=IMAGENS&type=JPG","author":[{"id":906,"nome":"Sofia Lorena","descricao":"Uma noite, em Janeiro de 1991, a minha mãe apanhou-me a escrever Saddam Hussein numa folha de papel, olhos colados ao ecrã da televisão. Estranhou. Eu estava na preparatória e colaborava no Sinal Mais. Pareceu-me importante saber escrever o nome do homem que estava em todas as notícias. Imagino que estivesse fascinada com a importância que era dada a algo que me parecia estar a acontecer noutro mundo. Aos poucos, percebi que o mundo é só um e que uma decisão tomada em Washington pode mudar para sempre a vida de alguém em Bagdad. Em 2003, estava no Iraque quando Saddam foi capturado. Em 2010, regressei para uma série de reportagens (Prémio Gazeta). Vi guerras e tive a imensa sorte de ver revoluções. Nunca mais parei de fazer do outro mundo o meu. E até aprendi a escrever Saddam em árabe.","email":"slorena@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"sofia-lorena","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"sofia-lorena-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739860?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#110;&#101;&#114;&#111;&#108;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/10/12/mundo/noticia/dirigentes-paises-arabes-seguranca-voltou-prioridade-absoluta-2066588","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Médio Oriente","url":"https://www.publico.pt/2023/10/12/mundo/noticia/dirigentes-paises-arabes-seguranca-voltou-prioridade-absoluta-2066588"},"id":2066588,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":7,"title":"Israel tem o dever de se defender, mas é importante como o fará, diz Blinken","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1850011?tp=UH&db=IMAGENS&type=JPG","author":[{"id":227,"nome":"Clara Barata","descricao":"Gosto de compreender como funciona o mundo. Numa célula, de me espantar como uma máquina biológica esconde a centelha que a transforma numa coisa viva. Nas manobras de bastidores de uma campanha de um político que quer ser eleito Presidente da República, descobre-se um homem e uma teia de interesses tão mais vasta que ele e muito mais que isso: as aspirações, os traumas, os preconceitos e a cultura de um povo que pode ser muito diferente do nosso. Os meus interesses são variados, da ciência à política internacional, ambiente ou tendências sociais, na Europa, nos EUA. Um ponto comum entre eles é sempre a vontade de querer saber como funcionam as coisas — e aplicar uma atitude que aprendi a assumir fazendo jornalismo de ciência, que é não ter medo de fazer perguntas, mesmo que pareçam básicas.","email":"clara.barata@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"clara-barata","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Clara_Barata.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737759?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#116;&#97;&#114;&#97;&#98;&#46;&#97;&#114;&#97;&#108;&#99;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/10/12/mundo/noticia/israel-defender-importante-fara-blinken-2066566","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Médio Oriente","url":""},"id":2066566,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":8,"title":"Tetra Pak e Refood lançam campanha “Reciclar Alimenta”","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1846157?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2023/10/04/estudiop/noticia/tetra-pak-refood-lancam-campanha-reciclar-alimenta-2065048","comments":1,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":{"id":0,"name":"Tetra Pak","ImageUrl":"https://imagens.publico.pt/imagens.aspx/1707554?tp=UH&db=IMAGENS","slug":null,"url":null},"rubric":{"name":"Conteúdo comercial","url":"https://www.publico.pt/2023/10/04/estudiop/noticia/tetra-pak-refood-lancam-campanha-reciclar-alimenta-2065048"},"id":2065048,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":9,"title":"Na Polónia as mulheres não querem ser “máquinas de fazer filhos”","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1849957?tp=UH&db=IMAGENS&type=JPG","author":[{"id":349,"nome":"Maria João Guimarães","descricao":"Sou jornalista desde 1998, no PÚBLICO, onde tenho podido ler, ouvir, contar, e viver histórias. Lembro-me da primeira, como estagiária: a de um afinador de acordeões no Intendente. Do pequeno largo de Lisboa passei para o Internacional e continuei a ouvir pessoas que tornam o mundo menos preto e branco. Escrevi sobre o muro em Israel e o muro de Berlim. Sobre racismo em Israel, na Alemanha, na Grécia. Falei com jovens alemães precários, com jovens gregos desempregados, com jovens a tentar saídas profissionais em Gaza. \r\nVivi em Berlim no ano académico de 2015/16, com uma bolsa para um programa para jornalistas da Universidade Livre. Vi um conjunto de reportagens sobre a Grécia distinguido com o Prémio de Reportagem Norberto Lopes da Casa da Imprensa 2011/2012, a reportagem “Uma geração a tentar sair de Gaza para dizer: sou de Gaza” com o Prémio de Jornalismo Direitos Humanos & Integração 2019 (imprensa escrita), e a cobertura das eleições alemãs de 2021 com o Prémio de Jornalismo Luso-Alemão 2022.","email":"maria.joao.guimaraes@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":", em Varsóvia","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"maria-joao-guimaraes","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Maria_J_Guimaraes.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737866?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#97;&#114;&#97;&#109;&#105;&#117;&#103;&#46;&#111;&#97;&#111;&#106;&#46;&#97;&#105;&#114;&#97;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/10/12/mundo/reportagem/polonia-mulheres-nao-querem-maquinas-filhos-2066547","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Reportagem","url":"/polonia"},"id":2066547,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":10,"title":"Atirar ovos ou parar o trânsito em Lisboa: quem é quem na luta climática","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1849906?tp=UH&db=IMAGENS&type=JPG","author":[{"id":177,"nome":"Andréia Azevedo Soares","descricao":"Nasci no Rio de Janeiro, onde estudei jornalismo na Universidade Federal. Mudei-me para Portugal em 1999. Trabalho no PÚBLICO desde 2000, com duas interrupções – uma para um doutoramento em Comunicação de Ciência no Imperial College, em Londres, e outra para colaborar com a revista científica WHO Bulletin, em Genebra. Já fui estagiária, colaboradora, repórter e sub-editora em diferentes secções deste jornal. A ciência e a literatura são as áreas sobre as quais mais gosto de escrever; fascina-me o modo como o escritor e o cientista se empenham para detalhar e compreender o mundo que nos rodeia, incluindo os seres vivos que nele habitam.\r\n\r\n\r\n\r\n","email":"aasoares@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"andreia-azevedo-soares","imagem":{"w":null,"h":null,"largura":501,"altura":498,"nome":"andreia_soares-removebg-preview.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1725026?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#114;&#97;&#111;&#115;&#97;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":4,"url":"/2023/10/12/azul/noticia/atirar-ovos-parar-transito-lisboa-luta-climatica-2066508","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Clima","url":"https://www.publico.pt/2023/10/12/azul/noticia/atirar-ovos-parar-transito-lisboa-luta-climatica-2066508"},"id":2066508,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":11,"title":"O que é o percevejo-asiático? Não é perigoso como o percevejo-de-cama?","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1850003?tp=UH&db=IMAGENS&type=JPG","author":[{"id":1084,"nome":"Nicolau Ferreira","descricao":"Licenciei-me em Biologia, completei o mestrado em Jornalismo Aplicado e aproximei-me da arte através dos estudos do corpo. No PÚBLICO, integrei as secções do Online e da Ciência. Agora, escrevo sobre ambiente no Azul. Gosto de caminhar.","email":"nicolau.ferreira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"nicolau-ferreira","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Nicolau Ferreira.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1686950?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#114;&#114;&#101;&#102;&#46;&#117;&#97;&#108;&#111;&#99;&#105;&#110;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/10/12/azul/noticia/percevejoasiatico-nao-perigoso-percevejodecama-2066565","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Perguntas e respostas","url":"https://www.publico.pt/2023/10/12/azul/noticia/percevejoasiatico-nao-perigoso-percevejodecama-2066565"},"id":2066565,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":12,"title":"Um orçamento forte e um PSD fraco","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1849948?tp=UH&db=IMAGENS&type=JPG","author":[{"id":169,"nome":"Leonete Botelho","descricao":"O jornalismo surgiu como a melhor forma possível - e desejada - de declarar independência ao terminar Direito. O Diário de Coimbra ficava ali na Rua da Sofia, entre o tribunal e o escritório de advogados onde fazia estágio, mas rapidamente o jornalismo se sobrepôs. O prazer da escrita, o resultado imediato, a realidade a acontecer sob os nossos olhos em primeira mão. Viver para contá-la. Voltei à Faculdade quando foi criada a pós-graduação em Direito da Comunicação. Seguiu-se a “tarimba” e o PÚBLICO: três anos correspondente em Coimbra, nove anos na secção de Sociedade no Porto – justiça, migrações, menores, violência doméstica: minorias. Em 2006 rumei a Lisboa e às maiorias: a Política vista da Assembleia da República. Editar foi um desafio que se impôs, outra vez. Mas é na ponta dos dedos, na veia crítica, que o jornalismo fervilha.","email":"lbotelho@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Editora de Política","profissaoNaAltura":"Editora de Política","slug":"leonete-botelho","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"leonete-botelho-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1740630?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#104;&#108;&#101;&#116;&#111;&#98;&#108;","contribuicao":"","tipo":"INTERNO"},{"id":749,"nome":"Helena Pereira","descricao":"Comecei a ser jornalista em 1996, no PÚBLICO, na editoria de Política, depois de um estágio na TSF. Em 2006, participei na fundação do semanário SOL, como jornalista de Política e, mais tarde, na fundação do jornal Observador, como editora de Política. Em 2016, passei para o Expresso também como editora de Política até ser convidada a regressar ao PÚBLICO em 2018 para ser editora executiva. Nasci num belo ano, 1974, na Maternidade Alfredo da Costa, em Lisboa, e sou mãe de gémeos, o Jaime e a Júlia.","email":"helena.pereira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Editora executiva","profissaoNaAltura":"Editora executiva","slug":"helena-pereira","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"helena-pereira-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739855?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":",Público","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#114;&#101;&#112;&#46;&#97;&#110;&#101;&#108;&#101;&#104;","contribuicao":"","tipo":"INTERNO"},{"id":5957,"nome":"Sónia Sapage","descricao":"Sou \"jornalista\" desde a escola primária, ainda em Trás-os-Montes. Sem carteira e sem curso, mas com microfones inventados e letras ainda incertas. Acabei por me licenciar em Ciências da Comunicação pela Universidade Nova de Lisboa, turma de 1993/97. Vinte e três anos depois, cheguei ao PÚBLICO, onde fui editora da secção de Política, depois editora-executiva e agora directora-adjunta. Pelo meio, fiz Erasmus, experimentei rádio, televisão e especializei-me em Política, área que comecei a trabalhar na revista Visão. No jornalismo, fui fazendo de tudo. Das crónicas de costume às análises e entrevistas. Da reportagem no fim da rua às incursões jornalísticas pelo estrangeiro. O jornalismo (também o meu) quase nunca se repete.","email":"sonia.sapage@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Directora-adjunta","profissaoNaAltura":"Directora-adjunta","slug":"sonia-sapage","imagem":{"w":null,"h":null,"largura":216,"altura":216,"nome":"sonia-sapage-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739859?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#101;&#103;&#97;&#112;&#97;&#115;&#46;&#97;&#105;&#110;&#111;&#115;","contribuicao":"","tipo":"INTERNO"},{"id":330,"nome":"São José Almeida","descricao":"Estagiária da fundação do PÚBLICO, integro a secção de Política. Desde 1990 acompanho a vida política com a preocupação de uma visão cultural da política. A minha prova de fogo foi o acompanhamento da dissidência do PCP de 1990 a 1994. Seguiu-se a transformação do CDS em PP. Fui repórter parlamentar entre 1995 e 2005. Editei a secção de Nacional de\r\n2005 a 2007. Sou redactora principal desde 2007. Recebi alguns prémios de jornalismo, como o “Pela diversidade. Contra a discriminação” da Comissão Europeia, em 2009. Dos prémios, destaco o primeiro dos dois que recebi da ILGA, em 2006,atribuído por ter introduzido a defesa dos direitos de identidade de gays, lésbicas, transexuais, transgéneros e intersexuais na agenda do jornalismo político português. Desde 2005 que assino a crónica A Semana Política.","email":"sao.jose.almeida@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Redactora principal","profissaoNaAltura":"Redactora principal","slug":"sao-jose-almeida","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"sao-jose-almeida-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739852?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#100;&#105;&#101;&#109;&#108;&#97;&#46;&#101;&#115;&#111;&#106;&#46;&#111;&#97;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/10/12/politica/noticia/orcamento-forte-psd-fraco-2066544","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Podcast Poder Público","url":"https://www.publico.pt/2023/10/12/politica/noticia/orcamento-forte-psd-fraco-2066544"},"id":2066544,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":13,"title":"Presidente da República condecora “lobos” e esquece campeões do mundo","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1850056?tp=UH&db=IMAGENS&type=JPG","author":[{"id":3960,"nome":"Jorge Miguel Matias","descricao":"Sou licenciado em Ciências da Comunicação pela Faculdade de Ciências Sociais e Humanas da Universidade Nova de Lisboa e frequentei ainda uma formação adicional em Jornalismo promovida pelo semanário Expresso. Tenho trabalhado na área do desporto desde o início da minha actividade profissional, primeiro na já extinta Gazeta dos Desportos, depois no PÚBLICO, projecto que abracei de forma definitiva em 1998, embora já antes tivesse uma colaboração regular com o jornal. Actualmente, exerço funções de editor. À margem do desporto, colaborei também com revistas como a \"Rotas e Destinos\" ou a \"National Geographic\".","email":"jmatias@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Editor de Desporto","profissaoNaAltura":"Editor de Desporto","slug":"jorge-miguel-matias","imagem":{"w":null,"h":null,"largura":216,"altura":216,"nome":"jorgemiguelmatias-removebg-preview.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1758433?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#97;&#105;&#116;&#97;&#109;&#106;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/10/12/desporto/noticia/presidente-republica-condecora-lobos-esquece-campeoes-mundo-2066585","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Presidente da República","url":"https://www.publico.pt/2023/10/12/desporto/noticia/presidente-republica-condecora-lobos-esquece-campeoes-mundo-2066585"},"id":2066585,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":14,"title":"Cesariny do outro lado do espelho: esta exposição no MAAT desafia convenções","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1849409?tp=UH&db=IMAGENS&type=JPG","author":[{"id":4036,"nome":"Luísa Soares de Oliveira","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Crítica de Artes Plásticas","profissaoNaAltura":"","slug":"luisa-soares-de-oliveira","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"LUISA SOARES DE OLIVEIRA.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1052076?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":true,"encodedEmail":"","contribuicao":"Texto","tipo":"EXTERNO"},{"id":15630,"nome":"Matilde Fieschi","descricao":"","email":"matilde.rebelo@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Fotojornalista","profissaoNaAltura":"","slug":"matilde-fieschi","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#108;&#101;&#98;&#101;&#114;&#46;&#101;&#100;&#108;&#105;&#116;&#97;&#109;","contribuicao":"Fotografia","tipo":"INTERNO"}],"shares":0,"url":"/2023/10/12/culturaipsilon/noticia/cesariny-lado-espelho-exposicao-maat-desafia-convencoes-2066156","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Mário Cesariny - cem anos depois","url":"https://www.publico.pt/2023/10/12/culturaipsilon/noticia/cesariny-lado-espelho-exposicao-maat-desafia-convencoes-2066156"},"id":2066156,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":15,"title":"Prémio Novos Talentos Ageas 2022: o prémio onde a cultura é a nota principal","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1847554?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2023/10/04/estudiop/noticia/premio-novos-talentos-ageas-2022-premio-onde-cultura-nota-principal-2065480","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":{"id":0,"name":"AGEAS","ImageUrl":"https://imagens.publico.pt/imagens.aspx/1785150?tp=UH&db=IMAGENS","slug":null,"url":null},"rubric":{"name":"Conteúdo comercial","url":"https://www.publico.pt/2023/10/04/estudiop/noticia/premio-novos-talentos-ageas-2022-premio-onde-cultura-nota-principal-2065480"},"id":2065480,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":16,"title":"Infarmed avança com inspecção ao IPO de Lisboa","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1849958?tp=UH&db=IMAGENS&type=JPG","author":[{"id":973,"nome":"PÚBLICO","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"publico","imagem":null,"hasImage":false,"isExternal":true,"encodedEmail":"","contribuicao":"","tipo":"EXTERNO"}],"shares":1,"url":"/2023/10/12/sociedade/noticia/infarmed-avanca-inspeccao-ipo-lisboa-2066546","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Saúde","url":"https://www.publico.pt/2023/10/12/sociedade/noticia/infarmed-avanca-inspeccao-ipo-lisboa-2066546"},"id":2066546,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":17,"title":"Governo aprova plano de acção da estratégia contra a pobreza","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1849953?tp=UH&db=IMAGENS&type=JPG","author":[{"id":205,"nome":"Ana Cristina Pereira","descricao":"Licenciada em Comunicação pela Universidade do Minho, sou repórter do Público desde 1999. Nessa qualidade, dedico-me a temas de direitos humanos e exclusão social, como pobreza, (des) igualdade de género, (des) protecção de crianças e jovens, envelhecimento, violência doméstica, reclusão, dependência, assuntos relacionados com população LGBT+, população cigana, população com deficiência, população migrante.\r\n\r\nPratico um jornalismo inclusivo, empenhado na escuta dos grupos sociais mais vulneráveis. A defesa desse modelo levou-me a escrever o ensaio Todas as Vozes/All the Voices (2014), que co-assino com Mike Jempson. E a orientar oficinas sobre media e direitos humanos/ media e diversidade.\r\n \r\nVárias reportagens minhas foram premiadas. Algumas extravasaram o espaço do jornal e estão publicadas em livros. Sou autora dos livros Meninos de Ninguém (2009), Viagens Brancas (2011), Movimento Perpétuo (2016), Mulheres da minha ilha, mulheres do meu país (2022). \r\n\r\nDo meu trabalho de voluntariado resultaram os livros Desafios – Direitos das Mulheres na Guiné-Bissau (2012), que co-assino com Nelson Constantino Lopes, e Mulheres de São Tomé e Príncipe (2018), que co-assino com Dário Pequeno Paraíso. Dos projectos colectivos dessa natureza destaco o livro híbrido As Vozes do Silêncio – um grupo de sem-abrigo em busca de cidadania (2017). \r\n\r\nEstou a explorar outras formas de escutar grupos sociais silenciados. A minha primeira peça de teatro-documental, Onde o Frio se Demora, foi co-produzida pela Narrativensaio e pela Casa das Artes de Famalicão (2016) e a segunda, Agora é diferente, pela Feiticeiro do Norte (2019).  Lancei no Público o podcast Dentro. Entre grades o mundo também muda (primeira temporada 2021/2022). Trabalho num documentário animado, com produção da Animais Avpl. \r\n","email":"acpereira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"ana-cristina-pereira","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Ana Cristina Pereira.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1157456?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#114;&#101;&#112;&#99;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/10/12/sociedade/noticia/aprovado-plano-accao-estrategia-nacional-combate-pobreza-2066535","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Pobreza","url":"https://www.publico.pt/2023/10/12/sociedade/noticia/aprovado-plano-accao-estrategia-nacional-combate-pobreza-2066535"},"id":2066535,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":18,"title":"Nova ferramenta de IA ajuda a remover cancros cerebrais no bloco operatório\r\n","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1849867?tp=UH&db=IMAGENS&type=JPG","author":[{"id":6468,"nome":"Karla Pequenino","descricao":"","email":"karla.pequenino@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"karla-pequenino","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Karla Pequenino z.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1524937?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#110;&#105;&#110;&#101;&#117;&#113;&#101;&#112;&#46;&#97;&#108;&#114;&#97;&#107;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/10/12/ciencia/noticia/nova-ferramenta-ia-ajuda-remover-perceber-cancros-cerebrais-bloco-operatorio-2066511","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Cérebro","url":"https://www.publico.pt/2023/10/12/ciencia/noticia/nova-ferramenta-ia-ajuda-remover-perceber-cancros-cerebrais-bloco-operatorio-2066511"},"id":2066511,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":19,"title":"Arrendar acelera o envelhecimento? Investigadores dizem que sim, mais do que fumar","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1849814?tp=UH&db=IMAGENS&type=JPG","author":[{"id":17576,"nome":"Margarida Leite Gonçalves","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"margarida-leite-goncalve