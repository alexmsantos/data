e de ver revoluções. Nunca mais parei de fazer do outro mundo o meu. E até aprendi a escrever Saddam em árabe.","email":"slorena@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"sofia-lorena","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"sofia-lorena-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739860?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#110;&#101;&#114;&#111;&#108;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":2,"url":"/2024/05/16/mundo/noticia/eslovaquia-atentado-sublinhar-perigos-polarizacao-discurso-politico-2090764","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Eleições europeias","url":"https://www.publico.pt/2024/05/16/mundo/noticia/eslovaquia-atentado-sublinhar-perigos-polarizacao-discurso-politico-2090764"},"id":2090764,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30}]
