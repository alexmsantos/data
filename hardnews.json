[{"pos":0,"title":"Despejos de casas continuam a aumentar e há milhares de processos em tribunal","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/2018286?tp=UH&db=IMAGENS&type=JPG","author":[{"id":15415,"nome":"Rafaela Burd Relvas","descricao":"","email":"rafaela.relvas@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"rafaela-burd-relvas","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#97;&#118;&#108;&#101;&#114;&#46;&#97;&#108;&#101;&#97;&#102;&#97;&#114;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/08/05/economia/noticia/despejos-continuam-aumentar-ha-milhares-processos-tribunal-2141775","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Habitação","url":"https://www.publico.pt/2025/08/05/economia/noticia/despejos-continuam-aumentar-ha-milhares-processos-tribunal-2141775"},"id":2141775,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":1,"title":"Quando o corpo tropeça: viver com ataxia de Friedreich","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2016683?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2025/07/29/estudiop/noticia/corpo-tropeca-viver-ataxia-friedreich-2140894","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":{"id":0,"name":"Biogen","ImageUrl":"https://imagens.publico.pt/imagens.aspx/1661685?tp=UH&db=IMAGENS","slug":null,"url":null},"rubric":{"name":"Conteúdo comercial","url":"https://www.publico.pt/2025/07/29/estudiop/noticia/corpo-tropeca-viver-ataxia-friedreich-2140894"},"id":2140894,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":2,"title":"Menos de 50 mil candidatos ao ensino superior, o número mais baixo desde a pandemia","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/2020666?tp=UH&db=IMAGENS&type=JPG","author":[{"id":495,"nome":"Andreia Sanches","descricao":"Entrei no PÚBLICO em 1996. Tinha 22 anos, terminado o curso de Ciências da Comunicação na Universidade Nova de Lisboa e estava no jornal onde queria, de facto, começar a fazer jornalismo. Estagiei no Internacional, quando ainda fazíamos fila para aceder ao computador da redacção que estava ligado à Internet. Seguiu-se a Educação, onde fiquei vários anos, quando aquela era uma secção autónoma, diária. Já na Sociedade, o leque de temas sobre os quais passei a escrever alargou-se – a pobreza e as desigualdades, a exclusão e as políticas de protecção social são alguns dos que tenho acompanhado de forma mais sistemática. Em 2013 foi publicado o meu primeiro livro. Chama-se \"Os Anjos Não Comem Chocolate\" e tem como ponto de partida uma reportagem que fiz no PÚBLICO sobre pais que perderam os seus filhos. Ao longo dos últimos anos desempenhei funções de editora do P2, editora da Sociedade, editora-executiva e directora-adjunta.","email":"asanches@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Redactora principal","profissaoNaAltura":"","slug":"andreia-sanches","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"andreia-sanches-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1748990?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":"Andreia C. Faria","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#104;&#99;&#110;&#97;&#115;&#97;","contribuicao":"","tipo":"INTERNO"},{"id":6039,"nome":"Cristiana Faria Moreira","descricao":"","email":"cristiana.moreira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"cristiana-faria-moreira","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Cristiana Faria Moreira.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1602146?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#114;&#111;&#109;&#46;&#97;&#110;&#97;&#105;&#116;&#115;&#105;&#114;&#99;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/08/05/sociedade/noticia/menos-50-mil-candidatos-ensino-superior-publico-numero-baixo-desde-pandemia-2142913","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Acesso ao Ensino Superior 2025","url":"https://www.publico.pt/2025/08/05/sociedade/noticia/menos-50-mil-candidatos-ensino-superior-publico-numero-baixo-desde-pandemia-2142913"},"id":2142913,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":3,"title":"Quase um terço dos incêndios começou durante a noite","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/2020644?tp=UH&db=IMAGENS&type=JPG","author":[{"id":17560,"nome":"Leonor Alhinho","descricao":"","email":"leonor.alhinho@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"leonor-alhinho","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#104;&#110;&#105;&#104;&#108;&#97;&#46;&#114;&#111;&#110;&#111;&#101;&#108;","contribuicao":"","tipo":"INTERNO"}],"shares":97,"url":"/2025/08/04/sociedade/noticia/quase-terco-incendios-comecaram-durante-noite-2142917","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Incêndios","url":"https://www.publico.pt/2025/08/04/sociedade/noticia/quase-terco-incendios-comecaram-du