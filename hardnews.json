ana Política.","email":"sao.jose.almeida@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Redactora principal","profissaoNaAltura":"Redactora principal","slug":"sao-jose-almeida","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"sao-jose-almeida-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739852?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#100;&#105;&#101;&#109;&#108;&#97;&#46;&#101;&#115;&#111;&#106;&#46;&#111;&#97;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/01/26/politica/noticia/francisco-assis-renuncia-presidencia-ces-substituido-sara-falcao-casaca-2078149","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Conselho Económico e Social","url":"https://www.publico.pt/2024/01/26/politica/noticia/francisco-assis-renuncia-presidencia-ces-substituido-sara-falcao-casaca-2078149"},"id":2078149,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":5,"title":"Marisa Matias: “Pode haver este acordo escondido com o rabo de fora” entre AD e Chega","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1877482?tp=UH&db=IMAGENS&type=JPG","author":[{"id":15507,"nome":"Ana Bacelar Begonha","descricao":"","email":"ana.begonha@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"ana-bacelar-begonha","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#104;&#110;&#111;&#103;&#101;&#98;&#46;&#97;&#110;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/01/25/politica/entrevista/marisa-matias-haver-acordo-escondido-rabo-ad-chega-2078006","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Entrevista","url":"/legislativas-2024"},"id":2078006,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":6,"title":"Lagarde vê inflação a cair, mas ainda não assume descida rápida dos juros\r\n","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1877890?tp=UH&db=IMAGENS&type=JPG","author":[{"id":1053,"nome":"Sérgio Aníbal","descricao":"Sou jornalista desde 1998, tendo começado pouco tempo depois de ter concluído a minha licenciatura em economia no ISEG. Nesse ano, fiz um estágio não-remunerado de três meses no Semanário Económico, jornal onde acabei por ficar durante seis anos, como redactor, primeiro, e como editor da secção de Economia, no final. Passei depois pelo Jornal de Negócios e pelo Diário de Notícias, chegando finalmente ao PÚBLICO em 2006. Sempre a cobrir temas económicos. Nos últimos anos, a crise financeira internacional e a crise da dívida soberana europeia têm ocupado grande parte do meu tempo e atenção.","email":"sergio.anibal@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"sergio-anibal","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Sergio_Anibal.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737905?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#108;&#97;&#98;&#105;&#110;&#97;&#46;&#111;&#105;&#103;&#114;&#101;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/01/26/economia/noticia/lagarde-ve-inflacao-cair-nao-assume-descida-rapida-juros-2078161","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"