er":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Fotojornalista","profissaoNaAltura":"","slug":"daniel-rocha","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Daniel_Rocha.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737766?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#104;&#99;&#111;&#114;&#100;","contribuicao":"fotografia","tipo":"INTERNO"}],"shares":0,"url":"/2025/08/08/politica/reportagem/militanteautarca-candidato-independente-casos-trofa-serpa-2143390","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Reportagem","url":"/autarquicas-2025"},"id":2143390,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":5,"title":"Plataformas de TVDE pedem valor extra aos clientes para diminuir tempo de espera","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/2021698?tp=UH&db=IMAGENS&type=JPG","author":[{"id":1068,"nome":"Luís Villalobos","descricao":"Comecei a trabalhar como jornalista profissional em 1992, na secção de economia do Semanário. Em 1994 apostei na vida de free-lancer, enquanto frequentava o curso de História, tendo colaborado para vários jornais e revistas. Em 2000 entrei para a revista Fortuna, da qual já era colaborador. Três anos depois tive a minha estreia nos diários, no Diário Económico, de onde transitei como editor para a Exame no final de 2005. Em 2007, cheguei ao PÚBLICO, para editar o suplemento de Economia. Actualmente, sou redactor da secção. Ganhei três prémios, o último dos quais na categoria nacional de imprensa e online do Ano Europeu do Combate à Pobreza e Exclusão Social. Sou co-autor do livro, “Negócios Vigiados”, sobre a PIDE e as empresas, e coordenei a obra “Quero um emprego!”, de Elisabete Sá, Raquel Almeida Correia e Ana Rute Silva.","email":"luis.villalobos@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"luis-villalobos","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Luis Villalobos.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1527219?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":",Sistema de gerenciamento de conteúdo","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#111;&#98;&#111;&#108;&#97;&#108;&#108;&#105;&#118;&#46;&#115;&#105;&#117;&#108;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/08/09/economia/noticia/plataformas-tvde-pedem-valor-extra-clientes-diminuir-tempo-espera-2143372","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Transportes","url":"https://www.publico.pt/2025/08/09/economia/noticia/plataformas-tvde-pedem-valor-extra-clientes-diminuir-tempo-espera-2143372"},"id":2143372,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":6,"title":"Colisão em Castro Verde faz seis mortos","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2021811?tp=UH&db=IMAGENS&type=JPG","author":[{"id":90,"nome":"Lusa","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"lusa","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"","contribuicao":"","tipo":"AGENCIA"}],"shares":0,"url":"/2025/08/09/sociedade/noticia/colisao-castro-verde-faz-seis-mortos-2143454","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Acidentes","url":"https://www.publico.pt/2025/08/09/sociedade/noticia/colisao-castro-verde-faz-seis-mortos-2143454"},"id":2143454,"