r":[{"id":3898,"nome":"Liliana Borges","descricao":"","email":"liliana.borges@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"liliana-pascoal-borges","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"liliana-borges.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1172095?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#103;&#114;&#111;&#98;&#46;&#97;&#110;&#97;&#105;&#108;&#105;&#108;","contribuicao":"","tipo":"INTERNO"},{"id":18186,"nome":"Joana Mesquita","descricao":"","email":"joana.mesquita@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista estagiária","profissaoNaAltura":"","slug":"joana-mesquita","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#116;&#105;&#117;&#113;&#115;&#101;&#109;&#46;&#97;&#110;&#97;&#111;&#106;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/08/28/politica/noticia/marcelo-contraria-referendo-chega-imigracao-numeros-desmentem-narrativas-2102070","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Chega","url":"https://www.publico.pt/2024/08/28/politica/noticia/marcelo-contraria-referendo-chega-imigracao-numeros-desmentem-narrativas-2102070"},"id":2102070,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":5,"title":"Marcelo devolve ao Governo diploma que limita reinscrições na CGA","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1934347?tp=UH&db=IMAGENS&type=JPG","author":[{"id":3150,"nome":"Raquel Martins","descricao":"Aos 15 anos decidi que queria mudar o mundo e, para desgosto da minha professora de Português, quis ser jornalista. Fiz o curso de Ciências da Comunicação na Universidade Nova, frequentei o Cenjor e andei indecisa entre a rádio e a imprensa. Depois de uma breve passagem pela rádio (Antena 3 e Rádio Expo), acabei por entrar no jornalismo económico um pouco por acaso. Primeiro, no Diário Económico – onde escrevi sobre ambiente, autarquias, política e, mais tarde, sobre trabalho e função pública – depois no Jornal de Negócios. Foi por isso que, em 2009, fiz uma formação na Universidade Católica sobre legislação laboral. Estou no PÚBLICO desde 2010. Acompanho os assuntos relacionados com trabalho, emprego e administração pública (há quem diga, com humor, que o Código do Trabalho é o meu livro de cabeceira.) Defendo que o jornalismo tem um papel cada vez mais importante na descodificação da avalanche de informação que todos os dias circula nas mais diversas plataformas.","email":"raquel.martins@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"raquel-martins","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#110;&#105;&#116;&#114;&#97;&#109;&#46;&#108;&#101;&#117;&#113;&#97;&#114;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/08/28/economia/noticia/marcelo-devolve-governo-diploma-limita-reinscricoes-cga-2102100","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Caixa Geral de Aposentações","url":"https://www.publico.pt/2024/08/28/economia/noticia/marcelo-devolve-governo-diploma-limita-reinscricoes-cga-2102100"},"id":2102100,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":6,"title":"Medidas para alunos sem aulas excluem docentes reformados há mais de cinco anos","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1934323?tp=UH&db=IMAGENS&type=JPG","author":[{"id":1047,"nome":"Natália Faria","descricao":"Jornalista desde 1999, trabalhei antes n’O Comércio do Porto e no 24 Horas. Fiz rádio e descobri-me jornalista em Guimarães, onde nasci. Interessam-me as áreas ligadas às Ciências Sociais e a possibilidade de, através do olhar dos especialistas, arranhar a superfície das coisas, tornando perceptível o que nem sempre está à vista. Demografia, envelhecimento, sociologia da família e dos costumes, migrações, desigualdades sociais e territoriais e pobreza são áreas sobre as quais escrevo.","email":"nfaria@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"natalia-faria","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"natalia faria COLUNISTA.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1089840?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#105;&#114;&#97;&#102;&#110;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/08/28/sociedade/noticia/medidas-excepcionais-alunos-aulas-deixam-professores-reformados-ha-cinco-anos-2102087","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Educação","url":"https://www.publico.pt/2024/08/28/sociedade/noticia/medidas-excepcionais-alunos-aulas-deixam-professores-reformados-ha-cinco-anos-2102087"},"id":2102087,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":7,"title":"Não será a campanha eleitoral a trazer soluções para o problema de Cabo Delgado","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1934190?tp=UH&db=IMAGENS&type=JPG","author":[{"id":3527,"nome":"António Rodrigues","descricao":"","email":"antonio.rodrigues@public