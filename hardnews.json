mments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Imigração","url":"https://www.publico.pt/2024/10/11/politica/noticia/imigrantes-irregulares-ano-descontos-poderao-pedir-autorizacao-residencia-2107582"},"id":2107582,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":17,"title":"Com um acordeão e Bach como companhia. Eis o vencedor do Prémio Novos Talentos Ageas","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1944552?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2024/10/10/estudiop/noticia/acordeao-bach-companhia-eis-vencedor-premio-novos-talentos-ageas-2106818","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":{"id":0,"name":"AGEAS","ImageUrl":"https://imagens.publico.pt/imagens.aspx/1944557?tp=UH&db=IMAGENS","slug":null,"url":null},"rubric":{"name":"Conteúdo comercial","url":"https://www.publico.pt/2024/10/10/estudiop/noticia/acordeao-bach-companhia-eis-vencedor-premio-novos-talentos-ageas-2106818"},"id":2106818,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":18,"title":"Detidos, espancados, expulsos à força: UE financia remoção de refugiados da Turquia","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1945841?tp=UH&db=IMAGENS&type=JPG","author":[{"id":169,"nome":"Leonete Botelho","descricao":"O jornalismo surgiu como a melhor forma possível - e desejada - de declarar independência ao terminar Direito. O Diário de Coimbra ficava ali na Rua da Sofia, entre o tribunal e o escritório de advogados onde fazia estágio, mas rapidamente o jornalismo se sobrepôs. O prazer da escrita, o resultado imediato, a realidade a acontecer sob os nossos olhos em primeira mão. Viver para contá-la. Voltei à Faculdade quando foi criada a pós-graduação em Direito da Comunicação. Seguiu-se a “tarimba” e o PÚBLICO: três anos correspondente em Coimbra, nove anos na secção de Sociedade no Porto – justiça, migrações, menores, violência doméstica: minorias. Em 2006 rumei a Lisboa e às maiorias: a Política vista da Assembleia da República. Editar foi um desafio que se impôs, outra vez. Mas é na ponta dos dedos, na veia crítica, que o jornalismo fervilha.","email":"lbotelho@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Grande repórter","profissaoNaAltura":"Grande repórter","slug":"leonete-botelho","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"leonete-botelho-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1740630?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#104;&#108;&#101;&#116;&#111;&#98;&#108;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/11/mundo/noticia/detidos-espancados-expulsos-forca-ue-financia-remocao-refugiados-turquia-2107633","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Refugiados","url":"https://www.publico.pt/2024/10/11/mundo/noticia/detidos-espancados-expulsos-forca-ue-financia-remocao-refugiados-turquia-2107633"},"id":2107633,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":19,"title":"Alberto Oculista : quando o passado também conta o futuro","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1945530?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"https://www.publico.pt/estudiop/conteudo_patrocinado/passado-conta-futuro","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Estudio P","url":"/estudiop"},"id":26705,"type":"EXTERNOS","isMultipleRubric":false,"tag":null,"size":30},{"pos":20,"title":"Mondlane ameaça com greve nacional se a Frelimo lhe tirar a vitória nas presidenciais","isPremium":false,"image":"https://imagens.public