l":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"sofia-rodrigues","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Sofia_Rodrigues.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1202811?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#117;&#103;&#105;&#114;&#100;&#111;&#114;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/12/14/politica/noticia/montenegro-pede-deputados-inspirem-altura-ps-ir-embora-2073769","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"PSD","url":"https://www.publico.pt/2023/12/14/politica/noticia/montenegro-pede-deputados-inspirem-altura-ps-ir-embora-2073769"},"id":2073769,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":27,"title":"Tribunais já têm mais de uma centena de acções para reconhecer contratos de estafetas","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1867064?tp=UH&db=IMAGENS&type=JPG","author":[{"id":3150,"nome":"Raquel Martins","descricao":"Aos 15 anos decidi que queria mudar o mundo e, para desgosto da minha professora de Português, quis ser jornalista. Fiz o curso de Ciências da Comunicação na Universidade Nova, frequentei o Cenjor e andei indecisa entre a rádio e a imprensa. Depois de uma breve passagem pela rádio (Antena 3 e Rádio Expo), acabei por entrar no jornalismo económico um pouco por acaso. Primeiro, no Diário Económico – onde escrevi sobre ambiente, autarquias, política e, mais tarde, sobre trabalho e função pública – depois no Jornal de Negócios. Foi por isso que, em 2009, fiz uma formação na Universidade Católica sobre legislação laboral. Estou no PÚBLICO desde 2010. Acompanho os assuntos relacionados com trabalho, emprego e administração pública (há quem diga, com humor, que o Código do Trabalho é o meu livro de cabeceira.) Defendo que o jornalismo tem um papel cada vez mais importante na descodificação da avalanche de informação que todos os dias circula nas mais diversas plataformas.","email":"raquel.martins@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"raquel-martins","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#110;&#105;&#116;&#114;&#97;&#109;&#46;&#108;&#101;&#117;&#113;&#97;&#114;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/12/15/economia/noticia/tribunais-ja-centena-accoes-reconhecer-contratos-estafetas-2073748","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Trabalho","url":"https://www.publico.pt/2023/12/15/economia/noticia/tribunais-ja-centena-accoes-reconhecer-contratos-estafetas-2073748"},"id":2073748,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":28,"title":"PS critica “fanáticos” que falam em “casas de banho mistas”","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1867029?tp=UH&db=IMAGENS&type=JPG","author":[{"id":90,"nome":"Lusa","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"lusa","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"","contribuicao":"","tipo":"AGENCIA"}],"shares":0,"url":"/2023/12/14/politica/noticia/ps-critica-fanaticos-falam-casas-banho-mistas-diploma-proteger-menores-2073740","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Identidade de género","url":"https://www.publico.pt/2023/12/14/politica/noticia/ps-critica-fanaticos-falam-casas-banho-mistas-diploma-proteger-menores-2073740"},"id":2073740,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":29,"title":"Sporting cumpriu os objectivos: ganhou e rodou","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1867118?tp=UH&db=IMAGENS&type=JPG","author":[{"id":206,"nome":"Marco Vaza","descricao":"O desporto tem vencedores e perdedores, heróis e vilões e a história nem sempre é sobre o que ganha. Eu escrevo sobre aquele que marca o golo decisivo, sobre aquele que corre mais do que os outros, sobre aquele que não desiste ou sobre aquele que desistiu quando estava perto do fim. Já assisti ao vivo a grandes goleadas, recordes do mundo, estreias de futuras estrelas e despedidas de mitos. Entrei no PÚBLICO como estagiário em 1999 para a secção de Desporto, onde continuo, depois de uma comissão entre 2006 e 2009 como editor da revista de domingo. Para além de centenas de jogos de futebol, já estive em duas edições dos Jogos Olímpicos (Atenas 2004 e Londres 2012), numa edição dos Mundiais de atletismo (Helsínquia 2005) e noutras competições de muitas modalidades. O desporto dos outros é a minha profissão.","email":"mvaza@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"marco-vaza","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Marco_Vaza.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737861?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#122;&#97;&#118;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":1,"url":"/2023/12/14/desporto/noticia/sporting-cumpriu-objectivos-ganhou-rodou-2073766","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Futebol","url":"https://www.publico.pt/2023/12/14/desporto/noticia/sporting-cumpriu-objectivos-ganhou-rodou-2073766"},"id":2073766,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30}]
