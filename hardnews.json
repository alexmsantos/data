ynch. Se não fossem os filmes não saberia o que estaria a fazer aqui – e isso é verdade para o bigger picture: sem os filmes não saberia o que fazer.","email":"vasco.camara@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Editor do Ípsilon","profissaoNaAltura":"Editor do Ípsilon","slug":"vasco-camara","imagem":{"w":null,"h":null,"largura":216,"altura":216,"nome":"vasco-camara-removebg-preview.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1747423?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":",Cannes","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#97;&#109;&#97;&#99;&#46;&#111;&#99;&#115;&#97;&#118;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/07/19/culturaipsilon/critica/oppenheimer-comecei-inquietarme-detestar-bomba-2057128","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Crítica","url":"/cinema"},"id":2057128,"type":"NOTICIA","isMultipleRubric":true,"tag":{"id":912,"nome":"Cinema","slug":"cinema","tagEn":"","isPrincipal":false,"isVisible":true,"urlRoute":"/tcinema","isPrincipalParaArtigo":true,"isTimeLine":false,"forcaConteudoAberto":false,"follow_type":null,"descricao":null,"imagem":null,"html":null,"isForForuns":true,"isUsedInForuns":false},"size":30},{"pos":16,"title":"<em>Barbie</em>, boneca de luxo","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1826822?tp=UH&db=IMAGENS&type=JPG","author":[{"id":1036,"nome":"Jorge Mourinha","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Crítico","profissaoNaAltura":"Crítico","slug":"jorge-mourinha","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Jorge Mourinha.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https: