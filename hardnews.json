 Política.","email":"sao.jose.almeida@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Redactora principal","profissaoNaAltura":"Redactora principal","slug":"sao-jose-almeida","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"sao-jose-almeida-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739852?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#100;&#105;&#101;&#109;&#108;&#97;&#46;&#101;&#115;&#111;&#106;&#46;&#111;&#97;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":36,"url":"/2024/05/21/politica/noticia/jose-pedro-aguiarbranco-anti-augusto-santos-silva-2091123","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Assembleia da República","url":"https://www.publico.pt/2024/05/21/politica/noticia/jose-pedro-aguiarbranco-anti-augusto-santos-silva-2091123"},"id":2091123,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":19,"title":"Itália é o país que mais apoia refugiados ucranianos? Números contam outra história","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1910026?tp=UH&db=IMAGENS&type=JPG","author":[{"id":17151,"nome":"Marta Leite Ferreira","descricao":"","email":"mlferreira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"marta-leite-ferreira","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#114;&#114;&#101;&#102;&#108;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/05/21/mundo/noticia/italia-pais-apoia-refugiados-ucranianos-numeros-contam-histor