ublico.pt/imagens.aspx/1647987?tp=UH&db=IMAGENS&type=JPG","is_vertical":true,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#116;&#110;&#101;&#109;&#105;&#112;&#114;","contribuicao":"","tipo":"INTERNO"}],"shares":22,"url":"/2025/02/02/culturaipsilon/noticia/marina-colasanti-19372025-forca-voz-delicada-2121000","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Obituário","url":"https://www.publico.pt/2025/02/02/culturaipsilon/noticia/marina-colasanti-19372025-forca-voz-delicada-2121000"},"id":2121000,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30}]
