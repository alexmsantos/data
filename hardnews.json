as da minha área de interesses.","email":"dandrade@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"david-andrade","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"david-andrade-removebg-preview.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1849770?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":",Arminia Bielefeld","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#101;&#100;&#97;&#114;&#100;&#110;&#97;&#100;","contribuicao":"","tipo":"INTERNO"}],"shares":58,"url":"/2024/05/21/desporto/noticia/francisco-conceicao-pedro-neto-convocatoria-portugal-europeu-2091250","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Futebol","url":"https://www.publico.pt/2024/05/21/desporto/noticia/francisco-conceicao-pedro-neto-convocatoria-portugal-europeu-2091250"},"id":2091250,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":5,"title":"PSD atira a bola ao Chega para aprovação de redução de IRS, mas Ventura desvia-se","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1910042?tp=UH&db=IMAGENS&type=JPG","author":[{"id":3898,"nome":"Liliana Borges","descricao":"","email":"liliana.borges@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"liliana-pascoal-borges","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"liliana-borges.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1172095?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#11