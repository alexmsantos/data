rra (Sousel), tive a certeza de que ser jornalista era mesmo o que queria ser. Estou no PÚBLICO desde 2016 a escrever diariamente para a secção de Ciência. Aqui, escuto e reconto algumas das histórias mais bonitas, desafiantes e inspiradoras.","email":"teresa.serafim@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"teresa-serafim","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Teresa Serafim.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1686947?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#109;&#105;&#102;&#97;&#114;&#101;&#115;&#46;&#97;&#115;&#101;&#114;&#101;&#116;","contribuicao":"texto","tipo":"INTERNO"},{"id":3920,"nome":"Daniel Rocha","descricao":"","email":"drocha@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Fotojornalista","profissaoNaAltura":"","slug":"daniel-rocha","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Daniel_Rocha.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737766?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#104;&#99;&#111;&#114;&#100;","contribuicao":"fotografia","tipo":"INTERNO"}],"shares":0,"url":"/2024/11/14/local/noticia/alta-lisboa-vilma-concretizou-sonho-cabeleireiro-nao-unica-2109460","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Lisboa","url":"https://www.publico.pt/2024/11/14/local/noticia/alta-lisboa-vilma-concretizou-sonho-cabeleireiro-nao-unica-2109460"},"id":2109460,"ty