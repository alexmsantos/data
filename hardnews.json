nline.","email":"bwong@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Editora","profissaoNaAltura":"Editora","slug":"barbara-wong","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Barbara Wong.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1527216?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":",Prisioneiro do Amor","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#103;&#110;&#111;&#119;&#98;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/07/15/fugas/reportagem/viagem-sul-tunisia-montanhas-trogloditas-praias-djerba-2056402","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":{"name":"fugas"},"brand":null,"rubric":{"name":"Reportagem","url":"/viagens"},"id":2056402,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":22},{"pos":21,"title":"Partilhar o prazer de dançar","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1825520?tp=UH&db=IMAGENS&type=JPG","author":[{"id":3132,"nome":"Rita Pimenta","descricao":"Por sugestão de um colega de faculdade, fui fazer testes à redacção do PÚBLICO para copydesk (função até aí por mim desconhecida). Fiquei. Provisoriamente, pensava eu. Estávamos em 1990, o meu curso era de Geografia, dava aulas em Setúbal e ia começar outra licenciatura: Filosofia da Ciência. Comecei, mas não acabei. Já que me tinha apaixonado pelo PÚBLICO, por informação e edição, fiz uma pós-graduação em Técnicas Editoriais e um curso de Escrita Literária. A partir de 1997, passei a escrever sobre livros para crianças e jovens. Primeiro, na rubrica Letra Pequena no Mil Folhas, depois na Pública. Em 2008, criei o blogue Letra Pequena. Pelo meio, assegurei a secção Miúdos. Depois, passei a assinar a coluna Livros da pág. Crianças e a secção Palavras, Expressões e Algumas Irritações (P2). Hoje, ocupo o Guia de sábado, destinado às crianças, e o espaço Letra Pequena no site-satélite Ímpar. Mas também escrevo sobre ilustração, peixe congelado, moscatel, família ou ténis de mesa. A minha matéria-prima são as palavras. E continuo a ser copydesk (já sei muito bem o que é).","email":"rpimenta@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Copydesk, Jornalista","profissaoNaAltura":"","slug":"rita-pimenta","imagem":{"w":null,"h":null,"largura":422,"altura":423,"nome":"EuCarteiraProfissional.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1647987?tp=UH&db=IMAGENS&type=JPG","is_vertical":true,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#116;&#110;&#101;&#109;&#105;&#112;&#114;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/07/15/impar/noticia/partilhar-prazer-dancar-2056929","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":{"name":"impar"},"brand":null,"rubric":{"name":"Livros","url":""},"id":2056929,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":22}]
