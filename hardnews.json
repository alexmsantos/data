).","email":"rpimenta@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Copydesk, Jornalista","profissaoNaAltura":"","slug":"rita-pimenta","imagem":{"w":422,"h":423,"largura":422,"altura":423,"nome":"EuCarteiraProfissional.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1647987?tp=UH&db=IMAGENS&type=JPG","is_vertical":true,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#116;&#110;&#101;&#109;&#105;&#112;&#114;","contribuicao":"","tipo":"INTERNO"}],"shares":1,"url":"/2024/07/04/culturaipsilon/noticia/festival-literario-bonito-pais-comeca-quintafeira-2096350","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Maratona de Leitura da Sertã","url":""},"id":2096350,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":26,"title":"As tatuagens dos profissionais de saúde (ainda!) são motivo de preconceito","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/807615?tp=KM&db=IMAGENS&type=JPG","author":[{"id":7317,"nome":"P3","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":null,"profissaoActual":"","profissaoNaAltura":"","slug":"p3","imagem":null,"hasImage":false,"isExternal":true,"encodedEmail":"","contribuicao":null,"tipo":"EXTERNO"}],"shares":0,"url":"/2024/07/04/p3/fotogaleria/tatuagens-profissionais-saude-sao-motivo-preconceito-412270","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":{"name":"p3"},"brand":null,"rubric":{"name":"Fotogaleria","url":"/fotogaleria"},"id":412270,"type":null,"isMultipleRubric":false,"tag":null,"size":30},{"pos":27,"title":"Silêncio, que se vão ouvir as Montanhas Vazias, o primeiro Quiet Trail da Europa","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/192141