ir em reportagem para caminhar no campo à procura de um mosteiro medieval ou de um castelo nas margens do Guadiana parece-me quase sempre boa ideia.","email":"lcanelas@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"lucinda-canelas","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#97;&#108;&#101;&#110;&#97;&#99;&#108;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/01/04/culturaipsilon/noticia/onde-andara-retrato-medico-tentou-salvar-van-gogh-2117335","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Artes","url":"https://www.publico.pt/2025/01/04/culturaipsilon/noticia/onde-andara-retrato-medico-tentou-salvar-van-gogh-2117335"},"id":2117335,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":14,"title":"Alargamento do rastreio de cancro da mama foi adiado para Fevereiro","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1967627?tp=UH&db=IMAGENS&type=JPG","author":[{"id":20,"nome":"Alexandra Campos","descricao":"","email":"acampos@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"alexandra-campos","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#111;&#112;&#109;&#97;&#99;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/01/04/sociedade/noticia/alargamento-rastreio-cancro-mama-adiado-fevereiro-duplica-numero-mulheres-rastrear-2117607","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Saúde","url":"https://www.publico.pt/2025/01/04/sociedade/noticia/alargamento-rastreio-cancro-mama-adiado-fevereiro-dupli