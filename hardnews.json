o.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":" em Veneza","profissaoActual":"Editor do Ípsilon","profissaoNaAltura":"","slug":"vasco-camara","imagem":{"w":null,"h":null,"largura":216,"altura":216,"nome":"vasco-camara-removebg-preview.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1747423?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":",Cannes","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#97;&#109;&#97;&#99;&#46;&#111;&#99;&#115;&#97;&#118;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/09/09/culturaipsilon/noticia/poor-things-yorgos-lanthimos-recebe-leao-ouro-veneza-2062763","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Cinema","url":"https://www.publico.pt/2023/09/09/culturaipsilon/noticia/poor-things-yorgos-lanthimos-recebe-leao-ouro-veneza-2062763"},"id":2062763,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":16,"title":"Proteínas conscientes na restauração moderna, no novo Webinar Entre Chefs","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1839592?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2023/09/06/estudiop/noticia/proteinas-conscientes-restauracao-moderna-novo-webinar-chefs-2062389","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":{"id":0,"name":"Entre Chefs - Unilever ","ImageUrl":"https://imagens.publico.pt/imagens.aspx/1688206?tp=UH&db=IMAGENS","slug":null,"url":null},"rubric":{"name":"Conteúdo comercial","url":"https://www.publico.pt/2023/09/06/estudiop/noticia/proteinas-conscientes-restauracao-moderna-novo-webinar-chefs-2062389"},"id":2062389,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":17,"title":"Cometa Nishimura visível a olho nu: “A oportunidade é mesmo única”","isPremium":false,