cha","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Joao P Pincha.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1332529?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#104;&#99;&#110;&#105;&#112;&#46;&#111;&#97;&#111;&#106;","contribuicao":"","tipo":"INTERNO"},{"id":12037,"nome":"José Volta e Pinto","descricao":"","email":"jose.volta.pinto@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"jose-volta-pinto","imagem":{"w":null,"h":null,"largura":500,"altura":500,"nome":"josevoltapinto.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1434636?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#116;&#110;&#105;&#112;&#46;&#97;&#116;&#108;&#111;&#118;&#46;&#101;&#115;&#111;&#106;","contribuicao":"","tipo":"INTERNO"},{"id":90,"nome":"Lusa","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"lusa","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"","contribuicao":"","tipo":"AGENCIA"}],"shares":25,"url":"/2025/08/01/sociedade/noticia/incendio-arouca-dominado-penafiel-ponte-barca-duas-frentes-activas-2142540","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Incêndios","url":"https://www.publico.pt/2025/08/01/sociedade/noticia/incendio-arouca-dominado-penafiel-ponte-barca-duas-frentes-activas-2142540"},"id":2142540,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":9,