lus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Fotojornalista","profissaoNaAltura":"","slug":"adriano-miranda","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Adriano_Miranda.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1044361?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#100;&#110;&#97;&#114;&#105;&#109;&#97;","contribuicao":"Fotografia","tipo":"INTERNO"},{"id":3620,"nome":"Manuel Roberto","descricao":"","email":"manuel.roberto@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Editor de Fotografia","profissaoNaAltura":"","slug":"manuel-roberto","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Manuel Roberto.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1059727?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#116;&#114;&#101;&#98;&#111;&#114;&#46;&#108;&#101;&#117;&#110;&#97;&#109;","contribuicao":"Fotografia","tipo":"INTERNO"},{"id":3929,"nome":"José Alves","descricao":"Já na escola primária que frequentei havia sido colocado em lugar de destaque um desenho que fiz, que explicava como os bombeiros apagavam os fogos. O desenho sempre foi uma paixão, mas, a partir de determinada altura da minha juventude, o objectivo passou a ser mais do que a forma.\r\nEste percurso levou-me ao mundo da infografia em 1996. O departamento denominava-se Investigação e Desenvolvimento e o que fazíamos ainda era naturalmente confundido com “o pessoal que faz bonecos”, alguma publicidade e com uma larga visão para a aventura em cada trabalho.\r\nEstou no PÚBLICO desde 2006 e hoje vejo que é maior a visão do que a aventura. Todos os dias me chegam às mãos os mais variados documentos. Folhas de Excel, documentos em Word ou mesmo rabiscos em folhas A4 acompanhadas de outros tantos gráficos de linhas e barras. A infografia é isto! Interpretar, avaliar, pesquisar e transformar folhas de Excel em informação gráfica (infografia) fácil, clara e objectiva aos olhos do leitor.\r\n","email":"jose.alves@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Infografia","profissaoNaAltura":"","slug":"jose-alves","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Jose_Alves.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737831?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#118;&#108;&#97;&#46;&#101;&#115;&#111;&#106;","contribuicao":"Infografia","tipo":"INTERNO"}],"shares":0,"url":"/2023/08/11/desporto/reportagem/minho-rei-senhor-i-liga-justifica-dominio-2059820","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Reportagem","url":"/futebol0"},"id":2059820,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":13,"title":"Há uma nova dieta que promete robalos e douradas mais saudáveis em Portugal","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1833530?tp=UH&db=IMAGENS&type=JPG","author":[{"id":17190,"nome":"Amanda Faria","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"amanda-faria","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/08/12/azul/noticia/ha-nova-dieta-promete-roba