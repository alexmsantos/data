tica internacional, ambiente ou tendências sociais, na Europa, nos EUA. Um ponto comum entre eles é sempre a vontade de querer saber como funcionam as coisas — e aplicar uma atitude que aprendi a assumir fazendo jornalismo de ciência, que é não ter medo de fazer perguntas, mesmo que pareçam básicas.","email":"clara.barata@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"clara-barata","imagem":{"w":null,"h":null,"largura":368,"altura":331,"nome":"_RG__foto_Clara_Barata_DSCF4152-removebg-preview.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1926383?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#116;&#97;&#114;&#97;&#98;&#46;&#97;&#114;&#97;&#108;&#99;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/11/14/azul/noticia/saidas-franca-argentina-levam-conflitos-globais-cop29-quer-paz-2111920","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"COP29","url":"https://www.publico.pt/2024/11/14/azul/noticia/saidas-franca-argentina-levam-conflitos-globais-cop29-quer-paz-2111920"},"id":2111920,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":15,"title":"Corpo de mulher francesa suspeita de matar os três filhos é encontrado na Suíça","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1955128?tp=UH&db=IMAGENS&type=JPG","author":[{"id":12037,"nome":"José Volta e Pinto","descricao":"","email":"jose.volta.pinto@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"jose-volta-pinto","imagem":{"w":null,"h":null,"largura":500,"altura":500,"nome":"josevoltapinto.png"