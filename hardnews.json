orena","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"sofia-lorena-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739860?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#110;&#101;&#114;&#111;&#108;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/25/mundo/noticia/governo-libanes-acusa-israel-crime-guerra-morte-tres-jornalistas-2109396","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Médio Oriente","url":"https://www.publico.pt/2024/10/25/mundo/noticia/governo-libanes-acusa-israel-crime-guerra-morte-tres-jornalistas-2109396"},"id":2109396,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":18,"title":"Sewell Setzer apaixonou-se pela IA e morreu dez meses depois. Mãe pede justiça","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1949757?tp=UH&db=IMAGENS&type=JPG","author":[{"id":12425,"nome":"Inês Duarte de Freitas","descricao":"","email":"ines.freitas@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"ines-duarte-freitas","imagem":{"w":null,"h":null,"largura":344,"altura":320,"nome":"WhatsApp_Image_2023-02-01_at_13.49.04-removebg-preview.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1775300?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#97;&#116;&#105;&#101;&#114;&#102;&#46;&#115;&#101;&#110;&#105;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/25/impar/noticia/sewell-setzer-apaixonouse-ia-morreu-dez-meses-mae-pede-just