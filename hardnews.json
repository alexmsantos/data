publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"vasco-camara","imagem":{"w":null,"h":null,"largura":216,"altura":216,"nome":"vasco-camara-removebg-preview.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1747423?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":",Cannes","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#97;&#109;&#97;&#99;&#46;&#111;&#99;&#115;&#97;&#118;","contribuicao":"","tipo":"INTERNO"}],"shares":41,"url":"/2025/09/06/culturaipsilon/noticia/leao-ouro-veneza-jim-jarmusch-2146244","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Cinema","url":"https://www.publico.pt/2025/09/06/culturaipsilon/noticia/leao-ouro-veneza-jim-jarmusch-2146244"},"id":2146244,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":9,"title":"O eclipse lunar deste domingo é visível em Portugal. É o último do ano","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2027892?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"https://www.publico.pt/2025/09/07/infografia/eclipse-lunar-domingo-visivel-portugal-ultimo-ano-870","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Eclipse lunar","url":"/eclipse"},"id":27107,"type":"EXTERNOS","isMultipleRubric":false,"tag":null,"size":30},{"pos":10,"title":"Portugal bate França e conquista 22.º título de campeão europeu de hóquei em patins","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2027875?tp=UH&db=IMAGENS&type=JPG","author":[{"id":6030,"nome":"Augusto Bernardino","descricao":"","email":"augusto.bernardino@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissa