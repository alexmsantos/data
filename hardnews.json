fissaoNaAltura":"","slug":"nuno-ferreira-santos","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#111;&#116;&#110;&#97;&#115;&#46;&#111;&#110;&#117;&#110;","contribuicao":"Fotos","tipo":"INTERNO"}],"shares":0,"url":"/2023/09/06/local/noticia/ha-passadico-loures-comeca-ponte-nome-acompanha-tejo-2062433","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Loures","url":"https://www.publico.pt/2023/09/06/local/noticia/ha-passadico-loures-comeca-ponte-nome-acompanha-tejo-2062433"},"id":2062433,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":27,"title":"Moritz e Franz, o grupo Wagner da Alemanha","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1839845?tp=UH&db=IMAGENS&type=JPG","author":[{"id":206,"nome":"Marco Vaza","descricao":"O desporto tem vencedores e perdedores, heróis e vilões e a história nem sempre é sobre o que ganha. Eu escrevo sobre aquele que marca o golo decisivo, sobre aquele que corre mais do que os outros, sobre aquele que não desiste ou sobre aquele que desistiu quando estava perto do fim. Já assisti ao vivo a grandes goleadas, recordes do mundo, estreias de futuras estrelas e despedidas de mitos. Entrei no PÚBLICO como estagiário em 1999 para a secção de Desporto, onde continuo, depois de uma comissão entre 2006 e 2009 como editor da revista de domingo. Para além de centenas de jogos de futebol, já estive em duas edições dos Jogos Olímpicos (Atenas 2004 e Londres 2012), numa edição dos Mundiais de atletismo (Helsínquia 2005) e noutras competições de muitas modalidades. O desporto dos outros é a minha profissão.","email":"mvaza@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"marco-vaza","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Marco_Vaza.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737861?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#122;&#97;&#118;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/09/06/desporto/noticia/moritz-franz-grupo-wagner-alemanha-2062465","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Basquetebol","url":"https://www.publico.pt/2023/09/06/desporto/noticia/moritz-franz-grupo-wagner-alemanha-2062465"},"id":2062465,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":28,"title":"Quinta na TV: <em>Cães Selvagens</em> e mulheres em lutas","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1839741?tp=UH&db=IMAGENS&type=JPG","author":[{"id":973,"nome":"PÚBLICO","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"publico","imagem":null,"hasImage":false,"isExternal":true,"encodedEmail":"","contribuicao":"","tipo":"EXTERNO"}],"shares":0,"url":"/2023/09/06/culturaipsilon/noticia/quinta-tv-caes-selvagens-mulheres-lutas-2062426","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Televisão","url":"https://www.publico.pt/2023/09/06/culturaipsilon/noticia/quinta-tv-caes-selvagens-mulheres-lutas-2062426"},"id":2062426,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":29,"title":"Este restaurante alentejano não pára! É mãe, filha e petiscos Sobre Rodas","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1839847?tp=UH&db=IMAGENS&type=JPG","author":[{"id":3708,"nome":"Luís J. Santos","descricao":"Cresci numa praia onde cada Verão era um mundo. Depois, aprendi tudo na rádio local (Praia, por sinal), entre conversas em directo com ouvintes, discos pedidos e notícias. Cheguei ao PÚBLICO no dia em que a Amália morreu para integrar a revolução online do Última Hora. Nunca mais parti, entre idas e voltas. Pelo caminho, licenciei-me em Comunicação, apurei o jornalismo (no abençoado Cenjor) e áreas várias (fotografia, TV, rádio, etc.), trabalhei num call-center, traduzi novelas, vivi em Barcelona. Tentei estudar filosofia, cinema e teatro. E continuo a tentar. Para mim, a Internet é só mais uma maneira de continuar a conversar e a viajar. Todos os dias aprendo algo com um leitor e dou graças por isso. O meu sonho é ser boxeur numa ilha tropical.","email":"luis.santos@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"luis-j-santos","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Luis_J_Santos.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737850?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#111;&#116;&#110;&#97;&#115;&#46;&#115;&#105;&#117;&#108;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/09/06/fugas/reportagem/restaurante-alentejano-nao-mae-filha-petiscos-rodas-2062420","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":{"name":"fugas"},"brand":null,"rubric":{"name":"Reportagem","url":"/odemira"},"id":2062420,"type":"NOTICIA","isMultipleRubric":true,"tag":{"id":1872,"nome":"Odemira","slug":"odemira","tagEn":"","isPrincipal":false,"isVisible":true,"urlRoute":"/todemira","isPrincipalParaArtigo":true,"isTimeLine":false,"forcaConteudoAberto":false,"follow_type":null,"descricao":null,"imagem":null,"html":null,"isForForuns":false,"isUsedInForuns":false},"size":30}]
