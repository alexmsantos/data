 jornalista da Cultura.","email":"isabel.salema@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"isabel-salema","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Isabel_Salema.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737807?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#109;&#101;&#108;&#97;&#115;&#46;&#108;&#101;&#98;&#97;&#115;&#105;","contribuicao":"Texto","tipo":"INTERNO"},{"id":3920,"nome":"Daniel Rocha","descricao":"","email":"drocha@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Fotojornalista","profissaoNaAltura":"","slug":"daniel-rocha","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Daniel_Rocha.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737766?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#104;&#99;&#111;&#114;&#100;","contribuicao":"Fotografia","tipo":"INTERNO"}],"shares":32,"url":"/2025/08/12/culturaipsilon/noticia/rita-catarina-almada-negreiros-restauraram-refugio-avos-artistas-2143418","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Casas de férias de arquitectos","url":"https://www.publico.pt/2025/08/12/culturaipsilon/noticia/rita-catarina-almada-negreiros-restauraram-refugio-avos-artistas-2143418"},"id":2143418,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":4,"title":"Fisco deu ajuda extra de 1,2 mil milhões de euros à Caixa e ao Novo Banco","isPremium