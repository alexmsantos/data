ride.” “E tudo isso, que é tanto, é pouco para o que eu quero.” Só não gosto de usar expressões em inglês e de citar Fernando Pessoa.","email":"alexandre.martins@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"alexandre-martins","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Alexandre_Martins.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1087168?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#110;&#105;&#116;&#114;&#97;&#109;&#46;&#101;&#114;&#100;&#110;&#97;&#120;&#101;&#108;&#97;","contribuicao":"","tipo":"INTERNO"}],"shares":33,"url":"/2023/12/20/mundo/noticia/trump-proibido-concorrer-primarias-republicanas-colorado-2074327","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"EUA","url":"https://www.publico.pt/2023/12/20/mundo/noticia/trump-proibido-concorrer-primarias-republicanas-colorado-2074327"},"id":2074327,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":25,"title":"Montenegro pede que se comparem anúncios com obras de Pedro Nuno Santos como ministro","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1868622?tp=UH&db=IMAGENS&type=JPG","author":[{"id":90,"nome":"Lusa","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"lusa","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"","contribuicao":"","tipo":"AGENCIA"}],"shares":0,"url":"/2023/12/20/politica/noticia/montenegro-pede-comparem-anuncios-obras-pedro-nuno-santos-ministro-2074368","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric