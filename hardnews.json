io Gazeta). Vi guerras e tive a imensa sorte de ver revoluções. Nunca mais parei de fazer do outro mundo o meu. E até aprendi a escrever Saddam em árabe.","email":"slorena@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"sofia-lorena","imagem":{"w":225,"h":225,"largura":225,"altura":225,"nome":"sofia-lorena-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739860?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#110;&#101;&#114;&#111;&#108;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2023/08/19/mundo/noticia/italia-supremo-requerentes-asilo-nao-sao-clandestinos-condena-salvini-2060665","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Refugiados","url":"https://www.publico.pt/2023/08/19/mundo/noticia/italia-supremo-requerentes-asilo-nao-sao-clandestinos-condena-salvini-2060665"},"id":2060665,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":11,"title":"Mãe e quatro filhos vivem numa casa ocupada onde contam os dias para ir para a rua","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1835204?tp=UH&db=IMAGENS&type=JPG","author":[{"id":6012,"nome":"André Borges Vieira","descricao":"","email":"andre.vieira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"andre-vieira","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#105;&#118;&#46;&#101;&#114;&#100;&#110;&#97;","contribuicao":"Texto","tipo":"INTERNO"},{"id":3977,"nome":"Paulo Pimenta","descricao"