egenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737766?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#104;&#99;&#111;&#114;&#100;","contribuicao":"fotografia","tipo":"INTERNO"}],"shares":0,"url":"/2025/06/25/culturaipsilon/entrevista/miriam-cahn-arte-vida-2136329","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Entrevista","url":"/exposicao"},"id":2136329,"type":"NOTICIA","isMultipleRubric":true,"tag":{"id":1335,"nome":"Exposição","slug":"exposicao","tagEn":"","isPrincipal":false,"isVisible":true,"urlRoute":"/texposicao","isPrincipalParaArtigo":true,"isTimeLine":false,"forcaConteudoAberto":false,"follow_type":null,"descricao":null,"imagem":null,"html":null,"isForForuns":false,"isUsedInForuns":false},"size":30},{"pos":28,"title":"Festival Med põe Cabo Verde no centro mas recebe a música do mundo inteiro","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2010415?tp=UH&db=IMAGENS&type=JPG","author":[{"id":1034,"nome":"Mário Lopes","descricao":"A culpa é de um gira-discos e dos discos que o meu pai rodava no gira-discos. A música chegou primeiro. Como com a maioria dos adolescentes, a música moldou-me gostos e atitudes, os discos foram guias para a descoberta do mundo. Através deles, cheguei a livros, a cinema, a nomes e mais nomes e a outros discos, outros livros, outros filmes. Foi pela música que cheguei ao jornalismo. Primeiro no Blitz, onde entrei estagiário no final do curso de Ciências da Comunicação e que seria, posteriormente, a casa do meu primeiro emprego. Depois no Diário de Notícias, onde a música começou a significar mais jornalismo, aberto a mais que bandas e discos. Ao PÚBLICO cheguei em 2005. Para escrever maioritariamente sobre música. Para, através da música, chegar a outros universos da cultura. E para, através da cultura, tentar compreender melhor o mundo e, escrevendo sobre ela, tentar mostrá-lo o mais claramente possível. A adolescência já lá vai há muito. Discos, livros, filmes, continuam a ser guias de descoberta. Assim sendo, continuarei.","email":"mario.lopes@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"mario-lopes","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Mario_Lopes.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/860961?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#112;&#111;&#108;&#46;&#111;&#105;&#114;&#97;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/06/25/culturaipsilon/noticia/festival-med-poe-cabo-verde-centro-recebe-musica-mundo-inteiro-2137764","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Música","url":"https://www.publico.pt/2025/06/25/culturaipsilon/noticia/festival-med-poe-cabo-verde-centro-recebe-musica-mundo-inteiro-2137764"},"id":2137764,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":29,"title":"Amada Moura e Cenoura-Brava: os dois convites para abrandar no Alentejo","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/2008305?tp=UH&db=IMAGENS&type=JPG","author":[{"id":3898,"nome":"Liliana Borges","descricao":"","email":"liliana.borges@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"liliana-pascoal-borges","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"liliana-borges.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1172