&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#122;&#105;&#115;&#46;&#97;&#116;&#105;&#114;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/16/mundo/noticia/lideres-ue-retomam-debate-migracoes-consenso-vista-2108198","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"União Europeia","url":"https://www.publico.pt/2024/10/16/mundo/noticia/lideres-ue-retomam-debate-migracoes-consenso-vista-2108198"},"id":2108198,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":21,"title":"<em>One Health Pet Awards</em> reconhece o que de melhor se faz pela saúde e bem-estar animal","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1946371?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2024/10/14/estudiop/noticia/one-health-pet-awards-reconhecer-melhor-faz-saude-bemestar-animal-2107795","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":{"id":0,"name":"PET AWARDS","ImageUrl":"https://imagens.publico.pt/imagens.aspx/1912516?tp=UH&db=IMAGENS","slug":null,"url":null},"rubric":{"name":"Conteúdo comercial","url":"https://www.publico.pt/2024/10/14/estudiop/noticia/one-health-pet-awards-reconhecer-melhor-faz-saude-bemestar-animal-2107795"},"id":2107795,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":22,"title":"Itália mandou os primeiros requerentes de asilo para a Albânia – alguns por engano","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1947185?tp=UH&db=IMAGENS&type=JPG","author":[{"id":906,"nome":"Sofia Lorena","descricao":"Uma noite, em Janeiro de 1991, a minha mãe apanhou-me a escrever Saddam Hussein numa folha de papel, olhos colados ao ecrã da televisão. Estranhou. Eu estava na preparatória e colaborava no Sinal Mais. Pareceu-me importante saber escrever o nome do homem que estava em todas as notícias. Imagino que estivesse fascinada com a importância que era dada a algo que me parecia estar a acontecer noutro mundo. Aos poucos, percebi que o mundo é só um e que uma decisão tomada em Washington pode mudar para sempre a vida de alguém em Bagdad. Em 2003, estava no Iraque quando Saddam foi capturado. Em 2010, regressei para uma série de reportagens (Prémio Gazeta). Vi guerras e tive a imensa sorte de ver revoluções. Nunca mais parei de fazer do outro mundo o meu. E até aprendi a escrever Saddam em árabe.","email":"slorena@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"sofia-lorena","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"sofia-lorena-nova.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1739860?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#110;&#101;&#114;&#111;&#108;&#115;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/16/mundo/noticia/italia-mandou-requerentes-asilo-albania-engano-2108224","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Migrações","url":"https://www.publico.pt/2024/10/16/mundo/noticia/italia-mandou-requerentes-asilo-albania-engano-2108224"},"id":2108224,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":23,"title":"Sabe tudo sobre o arquipélago encantado de Malta?","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1946618?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"https://www.publico.pt/quiz/interactivo/arquipelago-encantado-malta-261","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Estudio P","url":"/estudiop"},"id":26717,"type":"EXTERNOS","isMultipleRubric":false,"tag":null,"size":30},{"pos":24,"title":"Zelensky apresentou o plano que diz poder acabar com a guerra antes do fim de 2025","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1947130?tp=UH&db=IMAGENS&type=JPG","author":[{"id":4123,"nome":"João Ruela Ribeiro","descricao":"","email":"joao.ruela@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"joao-ruela-ribeiro","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#108;&#101;&#117;&#114;&#46;&#111;&#97;&#111;&#106;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/16/mundo/noticia/zelensky-apresentou-plano-acabar-guerra-fim-2025-2108191","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Guerra na Ucrânia","url":"https://www.publico.pt/2024/10/16/mundo/noticia/zelensky-apresentou-plano-acabar-guerra-fim-2025-2108191"},"id":2108191,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":25,"title":"Itália torna ilegal recurso a gestação de substituição no estrangeiro","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1947189?tp=UH&db=IMAGENS&type=JPG","author":[{"id":14261,"nome":"Carolina Amado","descricao":"","email":"carolina.amado@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"carolina-amado","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#100;&#97;&#109;&#97;&#46;&#97;&#110;&#105;&#108;&#111;&#114;&#97;&#99;","contribuicao":"","tipo":"INTERNO"},{"id":890,"nome":"Reuters","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"reuters","imagem":null,"hasImage":false,"isExternal":true,"encodedEmail":"","contribuicao":"","tipo":"AGENCIAS"}],"shares":0,"url":"/2024/10/16/mundo/noticia/italia-torna-ilegal-recurso-gestacao-substituicao-estrangeiro-2108227","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Itália","url":"https://www.publico.pt/2024/10/16/mundo/noticia/italia-torna-ilegal-recurso-gestacao-substituicao-estrangeiro-2108227"},"id":2108227,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":26,"title":"Supremo espanhol abre investigação inédita ao procurador-geral","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1946969?tp=UH&db=IMAGENS&type=JPG","author":[{"id":4038,"nome":"João Pedro Pincha","descricao":"Se não tivesse passado seis meses em Barcelona, provavelmente nunca me teria interessado por escrever sobre Lisboa. Foi na Catalunha que descobri, enquanto estagiava na televisão local, que a esquina mais próxima pode ser tão interessante como o outro lado do mundo. Meses depois, quando entrei no PÚBLICO pela primeira vez, já só queria estagiar na secção Local. E assim me iniciei a acompanhar tudo o que se passava na capital. Ainda passei brevemente pelo <i>O Corvo</i> antes de ajudar a fundar o <i>Observador</i>, onde estive quase três anos. Depois de cinco anos a acompanhar para o PÙBLICO a actualidade lisboeta e arredores, escrevo agora para a secção Mundo.","email":"joao.pincha@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"joao-pedro-pincha","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Joao P Pincha.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1332529?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#104;&#99;&#110;&#105;&#112;&#46;&#111;&#97;&#111;&#106;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/16/mundo/noticia/supremo-espanhol-abre-investigacao-inedita-procuradorgeral-2108106","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Espanha","url":"https://www.publico.pt/2024/10/16/mundo/noticia/supremo-espanhol-abre-investigacao-inedita-procuradorgeral-2108106"},"id":2108106,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":27,"title":"Todos os arguidos escolhem ficar em silêncio no início do julgamento do BES","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1946800?tp=UH&db=IMAGENS&type=JPG","author":[{"id":1050,"nome":"Mariana Oliveira","descricao":"Nasci no Porto em 1978 e fiz a licenciatura em Direito na Faculdade de Direito da Universidade do Porto. Quando optei por este curso, já tinha a intenção de me tornar jornalista, seguindo o conselho de alguns profissionais da classe. Depois de terminar a licenciatura, candidatei-me à Formação Geral – Especialização em Jornalismo no Centro Protocolar de Formação Profissional para Jornalistas (Cenjor), em Lisboa. Por isso vivi na capital quase oito meses, entre Dezembro de 2001 e Julho de 2002. Nesse mês, decidi regressar ao Porto para fazer o estágio integrado nessa formação. Fui jornalista estagiária no PÚBLICO entre Julho e Outubro e comecei a trabalhar em Fevereiro de 2003. No início, cobri mais intensivamente áreas ligadas à protecção civil. Actualmente, dedico-me à área da Justiça. ","email":"meoliveira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"mariana-oliveira","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#118;&#105;&#108;&#111;&#101;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/15/sociedade/noticia/arguidos-escolhem-ficar-silencio-inicio-julgamento-bes-2108048","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Justiça","url":"https://www.publico.pt/2024/10/15/sociedade/noticia/arguidos-escolhem-ficar-silencio-inicio-julgamento-bes-2108048"},"id":2108048,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":28,"title":"Dez anos após o colapso do BES, o julgamento","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1946506?tp=UH&db=IMAGENS&type=PNG","author":[{"id":1050,"nome":"Mariana Oliveira","descricao":"Nasci no Porto em 1978 e fiz a licenciatura em Direito na Faculdade de Direito da Universidade do Porto. Quando optei por este curso, já tinha a intenção de me tornar jornalista, seguindo o conselho de alguns profissionais da classe. Depois de terminar a licenciatura, candidatei-me à Formação Geral – Especialização em Jornalismo no Centro Protocolar de Formação Profissional para Jornalistas (Cenjor), em Lisboa. Por isso vivi na capital quase oito meses, entre Dezembro de 2001 e Julho de 2002. Nesse mês, decidi regressar ao Porto para fazer o estágio integrado nessa formação. Fui jornalista estagiária no PÚBLICO entre Julho e Outubro e comecei a trabalhar em Fevereiro de 2003. No início, cobri mais intensivamente áreas ligadas à protecção civil. Actualmente, dedico-me à área da Justiça. ","email":"meoliveira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":null,"profissaoActual":"Jornalista","profissaoNaAltura":"texto","slug":"mariana-oliveira","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#118;&#105;&#108;&#111;&#101;&#109;","contribuicao":null,"tipo":"INTERNO"},{"id":3926,"nome":"Cátia Mendonça","descricao":"Foi com traços de incerteza que comecei a desenhar o meu mapa profissional. Sempre gostei de criar e representar, o que me levou a estudar numa escola de artes para encontrar respostas e construir ambições. Em 2005 licenciei-me em Design, nas Caldas da Rainha. Foi durante um período de estudos em Bergen (Noruega) que, ao desenhar mapas e sistemas de orientação para montanhas, aprofundei a componente da informação visual. Trabalhei durante três anos como designer e produtora. Em 2009 concluí o mestrado em Audiovisual e Multimédia, na Escola Superior de Comunicação Social, tendo sido integrada num estágio no Público Online. Passei, entretanto, pela secção de Infografia do DN. Em 2011 regressei ao PÚBLICO. Gosto do orgânico e do artificial, do óbvio e do abstracto e de me perder pelos diversos campos da cibercultura. A profissão que exerço é a minha paixão, mas o sonho ficará completo quando puder cartografar o desconhecido.","email":"catia.mendonca@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":null,"profissaoActual":"Jornalista infográfica","profissaoNaAltura":"infografia","slug":"catia-mendonca","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Catia_Mendonca.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737757?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#99;&#110;&#111;&#100;&#110;&#101;&#109;&#46;&#97;&#105;&#116;&#97;&#99;","contribuicao":null,"tipo":"INTERNO"},{"id":3929,"nome":"José Alves","descricao":"Já na escola primária que frequentei havia sido colocado em lugar de destaque um desenho que fiz, que explicava como os bombeiros apagavam os fogos. O desenho sempre foi uma paixão, mas, a partir de determinada altura da minha juventude, o objectivo passou a ser mais do que a forma.\r\nEste percurso levou-me ao mundo da infografia em 1996. O departamento denominava-se Investigação e Desenvolvimento e o que fazíamos ainda era naturalmente confundido com “o pessoal que faz bonecos”, alguma publicidade e com uma larga visão para a aventura em cada trabalho.\r\nEstou no PÚBLICO desde 2006 e hoje vejo que é maior a visão do que a aventura. Todos os dias me chegam às mãos os mais variados documentos. Folhas de Excel, documentos em Word ou mesmo rabiscos em folhas A4 acompanhadas de outros tantos gráficos de linhas e barras. A infografia é isto! Interpretar, avaliar, pesquisar e transformar folhas de Excel em informação gráfica (infografia) fácil, clara e objectiva aos olhos do leitor.\r\n","email":"jose.alves@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":null,"profissaoActual":"Infografia","profissaoNaAltura":"infografia","slug":"jose-alves","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Jose_Alves.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737831?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#118;&#108;&#97;&#46;&#101;&#115;&#111;&#106;","contribuicao":null,"tipo":"INTERNO"},{"id":16232,"nome":"Gabriela Pedro","descricao":"","email":"gabriela.pedro@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":null,"profissaoActual":"Infografia","profissaoNaAltura":"infografia","slug":"gabriela-pedro","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#114;&#100;&#101;&#112;&#46;&#97;&#108;&#101;&#105;&#114;&#98;&#97;&#103;","contribuicao":null,"tipo":"INTERNO"},{"id":18382,"nome":"José Carvalheiro","descricao":"","email":"Jose.Carvalheiro@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":null,"profissaoActual":"Motion designer","profissaoNaAltura":"video","slug":"jose-carvalheiro","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#114;&#105;&#101;&#104;&#108;&#97;&#118;&#114;&#97;&#67;&#46;&#101;&#115;&#111;&#74;","contribuicao":null,"tipo":"INTERNO"}],"shares":0,"url":"/2024/10/15/infografia/dez-anos-apos-colapso-bes-julgamento-832","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Multimédia","url":"https://www.publico.pt/2024/10/15/infografia/dez-anos-apos-colapso-bes-julgamento-832"},"id":832,"type":"INFOGRAFIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":29,"title":"Julgamento do caso BES: Portugal a acertar contas com o seu passado","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1946557?tp=UH&db=IMAGENS&type=JPG","author":[{"id":953,"nome":"Manuel Carvalho","descricao":"Nasci em Alijó, Alto Douro, em 1965, estudei na extinta Escola Normal do Porto, fui professor durante dois anos e fiz parte do grupo de estagiários que integraram a primeira redacção do PÚBLICO, no final de 1989. Durante quase uma década trabalhei na área da Economia, tendo recebido vários prémios de jornalismo desta área. Neste período fiz estágios e programas de formação em Portugal, Japão (International Studies and Training), Estados Unidos (German Marshall Fund) e Bélgica e escrevi, em autoria exclusiva ou em co-autoria, os meus primeiros livros sobre uma das minhas paixões pessoais: o Douro e a memória do vinho do Porto. Fui grande repórter do Diário Económico e regressei ao PÚBLICO em 1999. Aí, fui grande repórter, lancei a Fugas em parceria com o nosso ex-colega David Lopes Ramos e entrei na direcção do jornal em 2000. Entretanto, estudei Direito na Faculdade de Direito da Universidade do Porto e História na Faculdade de Letras, onde me licenciei. Continuei a escrever sobre vinho (a enofilia é endémica nos durienses), fiz as eleições do Brasil desde o primeiro triunfo de Lula, em 2002. Em 2013 saí da direcção do Público e, como Redactor Principal, estreei a “Memória Futura”, a minha coluna de opinião semanal. E continuei a escrever sobre tudo um pouco, principalmente nas áreas da economia associadas ao desenvolvimento regional, à indústria e à agricultura. Pelo meio, recebi o Prémio Gazeta de Imprensa, em 2014, por uma série de reportagens sobre a I Guerra Mundial em Moçambique que fiz na companhia do fotojornalista Manuel Roberto. Essas reportagens dariam mais tarde lugar à edição do livro “A Guerra que Portugal Quis Esquecer” (Ed. Porto Editora). Em Julho de 2018 assumi o desafio de dirigir a mais completa, diversificada e talentosa redacção do país: a do meu jornal de sempre.","email":"manuel.carvalho@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Redactor principal","profissaoNaAltura":"Redactor principal","slug":"manuel-carvalho","imagem":{"w":null,"h":null,"largura":573,"altura":382,"nome":"Manuel Carvalho recentrado.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1901068?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":"Pedro Passos Coelho","translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#104;&#108;&#97;&#118;&#114;&#97;&#99;&#46;&#108;&#101;&#117;&#110;&#97;&#109;","contribuicao":"","tipo":"INTERNO"},{"id":6500,"nome":"Pedro Ferreira Esteves","descricao":"","email":"pedro.esteves@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Editor de economia","profissaoNaAltura":"Editor de economia","slug":"pedro-ferreira-esteves","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"pedro-ferreira-esteves.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1872007?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#118;&#101;&#116;&#115;&#101;&#46;&#111;&#114;&#100;&#101;&#112;","contribuicao":"","tipo":"INTERNO"},{"id":18331,"nome":"Nuno A. Coelho","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Sonoplasta","profissaoNaAltura":"Sonoplasta","slug":"nuno-coelho","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"","contribuicao":"edição","tipo":"INTERNO"}],"shares":0,"url":"/2024/10/15/economia/noticia/julgamento-caso-bes-portugal-acertar-contas-passado-2107918","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Podcast P24","url":"https://www.publico.pt/2024/10/15/economia/noticia/julgamento-caso-bes-portugal-acertar-contas-passado-2107918"},"id":2107918,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30}]
