desporto dos outros é a minha profissão.","email":"mvaza@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"marco-vaza","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Marco_Vaza.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737861?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#122;&#97;&#118;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":63,"url":"/2025/05/23/desporto/noticia/napoles-reinvencao-conte-scudetto-2134183","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Futebol","url":"https://www.publico.pt/2025/05/23/desporto/noticia/napoles-reinvencao-conte-scudetto-2134183"},"id":2134183,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":22,"title":"QURA: um vinho para momentos de lifestyle","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2002285?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2025/05/23/estudiop/noticia/qura-vinho-momentos-lifestyle-2133745","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":{"id":0,"name":"QURA WINE","ImageUrl":"https://imagens.publico.pt/imagens.aspx/2002003?tp=UH&db=IMAGENS","slug":null,"url":null},"rubric":{"name":"Conteúdo comercial","url":"https://www.publico.pt/2025/05/23/estudiop/noticia/qura-vinho-momentos-lifestyle-2133745"},"id":2133745,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":23,"title":"Na encruzilhada da sustentabilidade, persistir é a palavra de ordem","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2002667?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"/2025/05/23/estudiop/noticia/encruzilhada-suste