 do noticiário local ao desporto, fiz reportagem por todo o país, na Europa, em África, nos Estados Unidos. Tenho um MBA pela Porto Business School, com especialização em Comportamento Organizacional.","email":"voferreira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"victor-ferreira","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Vitor Ferreira.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/2001908?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#114;&#114;&#101;&#102;&#111;&#118;","contribuicao":"","tipo":"INTERNO"}],"shares":65,"url":"/2025/05/25/economia/noticia/coindu-gigante-industrial-portugues-tremer-2134178","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Empresas","url":"https://www.publico.pt/2025/05/25/economia/noticia/coindu-gigante-industrial-portugues-tremer-2134178"},"id":2134178,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":7,"title":"Putin está “louco”. Rússia faz maior ataque aéreo à Ucrânia desde o início da guerra","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/2003254?tp=UH&db=IMAGENS&type=JPG","author":[{"id":890,"nome":"Reuters","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"reuters","imagem":null,"hasImage":false,"isExternal":true,"encodedEmail":"","contribuicao":"","tipo":"AGENCIAS"}],"shares":0,"url":"/2025/05/26/mundo/noticia/russia-volta-atacar-ucrania-maior-investida-aerea-desde-inicio-guerra-putin-louco-acusa-trump-2134321","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand"