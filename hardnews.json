io de Jornalismo Luso-Alemão 2022.","email":"maria.joao.guimaraes@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"maria-joao-guimaraes","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Maria_J_Guimaraes.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737866?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#97;&#114;&#97;&#109;&#105;&#117;&#103;&#46;&#111;&#97;&#111;&#106;&#46;&#97;&#105;&#114;&#97;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/07/14/mundo/noticia/ataque-trump-tera-consequencias-politicas-imensas-2097518","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Donald Trump","url":"https://www.publico.pt/2024/07/14/mundo/noticia/ataque-trump-tera-consequencias-politicas-imensas-2097518"},"id":2097518,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":4,"title":"Jovem de 20 anos e republicano: o que se sabe sobre o presumível atacante de Trump","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1924322?tp=UH&db=IMAGENS&type=JPG","author":[{"id":890,"nome":"Reuters","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"reuters","imagem":null,"hasImage":false,"isExternal":true,"encodedEmail":"","contribuicao":"","tipo":"AGENCIAS"},{"id":973,"nome":"PÚBLICO","descricao":"","email":"","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"","profissaoNaAltura":"","slug":"publico","imagem":null,"hasImage":false,"isExternal":true,"encodedEmail":"","contribuicao