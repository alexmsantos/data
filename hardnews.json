[{"pos":0,"title":"Governo tinha 137 milhões para três eleições. Agora são quatro mas valor é o mesmo","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1984306?tp=UH&db=IMAGENS&type=JPG","author":[{"id":17151,"nome":"Marta Leite Ferreira","descricao":"Integrei a secção Online do PÚBLICO em Maio de 2023. Faço também parte da equipa dedicada ao combate às notícias falsas e à desinformação, a Prova dos Factos. Estive durante oito anos no Observador — primeiro em Actualidade e depois na secção de Sociedade, onde cobria a área da Saúde. Interesso-me por ciência e tecnologia, culinária e música. Acredito que o jornalismo digital é uma ferramenta fundamental para reencontrar a fronteira, mais esbatida do que nunca, entre a verdade e a mentira. É para isso que trabalho todos os dias.","email":"mlferreira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"marta-leite-ferreira","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#114;&#114;&#101;&#102;&#108;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/03/14/politica/noticia/governo-137-milhoes-tres-eleicoes-sao-quatro-valor-2125659","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Crise política","url":"https://www.publico.pt/2025/03/14/politica/noticia/governo-137-milhoes-tres-eleicoes-sao-quatro-valor-2125659"},"id":2125659,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":1,"title":"Cultura que transforma","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1984541?tp=UH&db=IMAGENS&type=JPG","author":[],"shares":0,"url":"https://www.publico.pt/estudiop/conteudo_patrocinado/cultura-transforma","comments":0,"spoonsored":true,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"