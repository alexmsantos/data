ista Visão e venci a categoria de fotografia de arquitectura do Euro Press Photo Awards da Fuji Film. Fui premiado no Prémio Estação Imagem|Mora em 2010 e 2011. Desde 1999, sou fotojornalista no PÚBLICO.","email":"ngarrido@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Fotojornalista","profissaoNaAltura":"Fotojornalista","slug":"nelson-garrido","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Nelson_Garrido.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737874?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#100;&#105;&#114;&#114;&#97;&#103;&#110;","contribuicao":"fotografia","tipo":"INTERNO"}],"shares":0,"url":"/2025/08/17/culturaipsilon/noticia/garagens-tambem-contam-historia-arquitectura-2143620","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Arquitectura","url":"https://www.publico.pt/2025/08/17/culturaipsilon/noticia/garagens-tambem-contam-historia-arquitectura-2143620"},"id":2143620,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":9,"title":"Fazer as pazes com a comida, para começar a viver","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/2022962?tp=UH&db=IMAGENS&type=JPG","author":[{"id":18338,"nome":"Rita Caetano","descricao":"","email":"rscaetano@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"rita-caetano","imagem":null,"hasImage":false,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#111;&#110;&#97;&#116;&#101;&#97;&#99;&#115;&#114;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/08/17/impar/noticia