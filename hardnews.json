o.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"maria-lopes","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Maria_C_Lopes.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737865?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#101;&#112;&#111;&#108;&#46;&#97;&#105;&#114;&#97;&#109;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2024/11/28/politica/noticia/pensoes-comissoes-banca-salarios-politicos-quarto-dia-votacoes-2113667","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Orçamento do Estado 2025","url":"https://www.publico.pt/2024/11/28/politica/noticia/pensoes-comissoes-banca-salarios-politicos-quarto-dia-votacoes-2113667"},"id":2113667,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":4,"title":"Há mais jovens que querem ser professores, mas faltam vagas","isPremium":true,"image":"https://imagens.publico.pt/imagens.aspx/1958776?tp=UH&db=IMAGENS&type=JPG","author":[{"id":6039,"nome":"Cristiana Faria Moreira","descricao":"","email":"cristiana.moreira@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"Jornalista","slug":"cristiana-faria-moreira","imagem":{"w":null,"h":null,"largura":225,"altura":225,"nome":"Cristiana Faria Moreira.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/1602146?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#97;&#114;&#105;&#101;&#114;&#111;&#109;&#46;&#97