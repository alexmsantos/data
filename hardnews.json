Actual":"","profissaoNaAltura":"","slug":"pedro-joao-santos","imagem":{"w":null,"h":null,"largura":1450,"altura":1450,"nome":"publico_mugshot.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1873575?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":true,"encodedEmail":"","contribuicao":"","tipo":"EXTERNO"}],"shares":0,"url":"/2025/03/11/culturaipsilon/critica/mayhem-lady-gaga-noticias-caos-manifestamente-exageradas-2125526","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":null,"brand":null,"rubric":{"name":"Crítica","url":"/musica"},"id":2125526,"type":"NOTICIA","isMultipleRubric":true,"tag":{"id":708,"nome":"Música","slug":"musica","tagEn":"","isPrincipal":false,"isVisible":true,"urlRoute":"/tmusica","isPrincipalParaArtigo":true,"isTimeLine":false,"forcaConteudoAberto":false,"follow_type":null,"descricao":null,"imagem":null,"html":null,"isForForuns":true,"isUsedInForuns":false},"size":30},{"pos":17,"title":"BTL: um guia para viajar pela feira de turismo de Lisboa","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1984060?tp=UH&db=IMAGENS&type=JPG","author":[{"id":3708,"nome":"Luís J. Santos","descricao":"Cresci numa praia onde cada Verão era um mundo. Depois, aprendi tudo na rádio local (Praia, por sinal), entre conversas em directo com ouvintes, discos pedidos e notícias. Cheguei ao PÚBLICO no dia em que a Amália morreu para integrar a revolução online do Última Hora. Nunca mais parti, entre idas e voltas. Pelo caminho, licenciei-me em Comunicação, apurei o jornalismo (no abençoado Cenjor) e áreas várias (fotografia, TV, rádio, etc.), trabalhei num call-center, traduzi novelas, vivi em Barcelona. Tentei estudar filosofia, cinema e teatro. E continuo a tentar. Para mim, a Internet é só mais uma maneira de continuar a conversar e a viajar. Todos os dias aprendo algo com um leitor e dou graças por isso. O meu sonho é ser boxeur numa ilha tropical.","email":"luis.santos@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"luis-j-santos","imagem":{"w":null,"h":null,"largura":null,"altura":null,"nome":"Luis_J_Santos.jpg","legenda":null,"autor":null,"tipo":"JPG","url":"https://imagens.publico.pt/imagens.aspx/737850?tp=UH&db=IMAGENS&type=JPG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#111;&#116;&#110;&#97;&#115;&#46;&#115;&#105;&#117;&#108;","contribuicao":"","tipo":"INTERNO"}],"shares":0,"url":"/2025/03/11/fugas/noticia/btl-guia-viajar-feira-turismo-lisboa-2125431","comments":0,"spoonsored":false,"isOpinion":false,"homeBrand":{"name":"fugas"},"brand":null,"rubric":{"name":"Turismo","url":"https://www.publico.pt/2025/03/11/fugas/noticia/btl-guia-viajar-feira-turismo-lisboa-2125431"},"id":2125431,"type":"NOTICIA","isMultipleRubric":false,"tag":null,"size":30},{"pos":18,"title":"Ricardo Preto vai deixar a direcção criativa do grupo Amorim Luxury","isPremium":false,"image":"https://imagens.publico.pt/imagens.aspx/1984005?tp=UH&db=IMAGENS&type=JPG","author":[{"id":12425,"nome":"Inês Duarte de Freitas","descricao":"","email":"ines.freitas@publico.pt","facebook":null,"googlePlus":null,"twitter":null,"site":null,"url":null,"localizacao":"","profissaoActual":"Jornalista","profissaoNaAltura":"","slug":"ines-duarte-freitas","imagem":{"w":null,"h":null,"largura":344,"altura":320,"nome":"WhatsApp_Image_2023-02-01_at_13.49.04-removebg-preview.png","legenda":null,"autor":null,"tipo":"PNG","url":"https://imagens.publico.pt/imagens.aspx/1775300?tp=UH&db=IMAGENS&type=PNG","is_vertical":false,"tags":null,"translations":null},"hasImage":true,"isExternal":false,"encodedEmail":"&#116;&#112;&#46;&#111;&#99;&#105;&#108;&#98;&#117;&#112;&#64;&#115;&#97;&#116;&#105;&#101;&#114;&#102;&#46;&#